  background: linear-gradient(135deg, #ffe5e5, #e3f2fd);
  border-radius: 40rpx;
  padding: 48rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.child-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.child-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.child-info {
  margin-left: 32rpx;
