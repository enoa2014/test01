   ================================ */

/* 按钮组件 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  box-sizing: border-box;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b35, #f39c12);
  color: white;
}

.btn-secondary {
  background-color: #e3f2fd;
  color: #4a90e2;
  border: 2rpx solid #4a90e2;
}

.btn-danger {
  background-color: #ffe5e5;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
}

.btn-text {
  background-color: transparent;
  color: #7f8c8d;
  padding: 16rpx 24rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 36rpx;
}

.btn-block {
  width: 100%;
  display: block;
}

/* 卡片组件 */
.card {
  background-color: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  padding: 40rpx;
  border: 2rpx solid #e8f4fd;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f1f3f4;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.card-content {
  color: #7f8c8d;
  line-height: 1.6;
}

/* 状态标签 */
.status-tag {
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: inline-block;
}

.status-in {
  background-color: #e8f5e8;
  color: #27ae60;
}

.status-out {
  background-color: #fff3e0;
  color: #f39c12;
}

.status-pending {
  background-color: #e3f2fd;
  color: #4a90e2;
}

.status-emergency {
  background-color: #ffe5e5;
  color: #e74c3c;
}

/* 输入框组件 */
.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 4rpx solid #e8f4fd;
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #2c3e50;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  outline: none;
  border-color: #4a90e2;
  background-color: white;
  box-shadow: 0 0 0 6rpx rgba(74, 144, 226, 0.1);
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.form-error {
  color: #e74c3c;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 特殊组件 - 儿童信息卡片 */
