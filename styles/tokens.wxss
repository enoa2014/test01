/* 时间轴组件 */
.timeline {
  position: relative;
  padding-left: 64rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, #ff6b35, #4a90e2);
}

.timeline-item {
  position: relative;
  margin-bottom: 48rpx;
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 40rpx;
  width: 24rpx;
  height: 24rpx;
  background-color: white;
  border: 6rpx solid #ff6b35;
  border-radius: 50%;
}

.timeline-date {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.timeline-content {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.5;
