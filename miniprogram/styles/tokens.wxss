/* 公益小家患者档案管理系统 - 设计令牌 */
/* 基于设计文档和 Figma 变量的小程序样式系统 */

/* ================================
   设计变量 (Design Tokens)
   ================================ */

/* 主色系 - 根据设计规范更新 */
:root {
  /* Primary: 温暖的蓝色系 - 体现专业和信赖 */
  --color-primary: #2E86AB;
  --color-primary-light: #4A9BC1;
  --color-primary-dark: #226B89;

  /* Secondary: 温馨的橙色系 - 体现关爱和温暖 */
  --color-secondary: #F24236;
  --color-secondary-light: #F5614F;
  --color-secondary-dark: #D13428;

  /* Success: 成功绿 */
  --color-success: #52C41A;
  --color-success-light: #73D13D;
  --color-success-dark: #389E0D;
}

/* 功能色彩 - 根据设计规范更新 */
:root {
  /* 语义色彩 */
  --color-warning: #FAAD14;
  --color-error: #FF4D4F;
  --color-info: #1890FF;
  --color-danger: #FF4D4F; /* 保持向后兼容 */

  /* 辅助色系 */
  --color-soft-pink: #FFE5E5;
  --color-sky-blue: #E3F2FD;
  --color-mint-green: #E8F5E8;
}

/* 中性色系 - 根据设计规范更新 */
:root {
  /* 文本色彩 */
  --color-text-primary: #262626;
  --color-text-secondary: #595959;
  --color-text-tertiary: #8C8C8C;
  --color-text-disabled: #BFBFBF;

  /* 背景色彩 */
  --color-bg-primary: #FFFFFF;
  --color-bg-secondary: #FAFAFA;
  --color-bg-tertiary: #F5F5F5;

  /* 边框色彩 */
  --color-border-primary: #D9D9D9;
  --color-border-secondary: #F0F0F0;
  --color-border-tertiary: #FAFAFA;
}

/* 字体大小 (rpx) */
:root {
  --text-xs: 20rpx;    /* 10px */
  --text-sm: 24rpx;    /* 12px */
  --text-base: 28rpx;  /* 14px */
  --text-md: 32rpx;    /* 16px */
  --text-lg: 36rpx;    /* 18px */
  --text-xl: 44rpx;    /* 22px */
  --text-2xl: 56rpx;   /* 28px */
  --text-3xl: 64rpx;   /* 32px */
}

/* 字体重量 */
:root {
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;
}

/* 间距 (rpx) */
:root {
  --space-0: 0;
  --space-1: 8rpx;    /* 4px */
  --space-2: 16rpx;   /* 8px */
  --space-3: 24rpx;   /* 12px */
  --space-4: 32rpx;   /* 16px */
  --space-5: 40rpx;   /* 20px */
  --space-6: 48rpx;   /* 24px */
  --space-8: 64rpx;   /* 32px */
  --space-10: 80rpx;  /* 40px */
  --space-12: 96rpx;  /* 48px */
  --space-16: 128rpx; /* 64px */
}

/* 圆角 (rpx) */
:root {
  --radius-none: 0;
  --radius-sm: 8rpx;   /* 4px */
  --radius-base: 16rpx; /* 8px */
  --radius-md: 24rpx;   /* 12px */
  --radius-lg: 32rpx;   /* 16px */
  --radius-xl: 40rpx;   /* 20px */
  --radius-full: 50%;
}

/* 阴影系统 - 层级阴影和投影效果 */
:root {
  --shadow-none: none;
  --shadow-xs: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-base: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  --shadow-md: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 16rpx 32rpx rgba(0, 0, 0, 0.15);
  --shadow-xl: 0 24rpx 48rpx rgba(0, 0, 0, 0.18);
  --shadow-2xl: 0 32rpx 64rpx rgba(0, 0, 0, 0.2);

  /* 彩色阴影 */
  --shadow-primary: 0 8rpx 32rpx rgba(46, 134, 171, 0.25);
  --shadow-secondary: 0 8rpx 32rpx rgba(242, 66, 54, 0.25);
  --shadow-success: 0 8rpx 32rpx rgba(82, 196, 26, 0.25);
  --shadow-warning: 0 8rpx 32rpx rgba(250, 173, 20, 0.25);
  --shadow-error: 0 8rpx 32rpx rgba(255, 77, 79, 0.25);
}

/* ================================
   色彩工具类
   ================================ */

/* 文字颜色 */
.text-primary { color: var(--color-primary); }
.text-secondary { color: var(--color-secondary); }
.text-success { color: var(--color-success); }
.text-danger { color: var(--color-danger); }
.text-warning { color: var(--color-warning); }
.text-info { color: var(--color-info); }

.text-gray-900 { color: var(--color-text-primary); }
.text-gray-600 { color: var(--color-text-secondary); }
.text-gray-400 { color: var(--color-text-tertiary); }
.text-gray-300 { color: var(--color-text-disabled); }

/* 背景颜色 */
.bg-primary { background-color: var(--color-primary); }
.bg-secondary { background-color: var(--color-secondary); }
.bg-success { background-color: var(--color-success); }
.bg-danger { background-color: var(--color-danger); }
.bg-warning { background-color: var(--color-warning); }
.bg-info { background-color: var(--color-info); }

.bg-white { background-color: var(--color-bg-primary); }
