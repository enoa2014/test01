.bg-gray-100 { background-color: var(--color-bg-tertiary); }

.bg-soft-pink { background-color: var(--color-soft-pink); }
.bg-sky-blue { background-color: var(--color-sky-blue); }
.bg-mint-green { background-color: var(--color-mint-green); }

/* 边框颜色 */
.border-primary { border-color: var(--color-primary); }
.border-secondary { border-color: var(--color-secondary); }
