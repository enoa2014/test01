<view class="pm-input {{disabled ? 'pm-input--disabled' : ''}} {{block ? 'pm-input--block' : ''}}">
  <label wx:if="{{label}}" class="pm-input__label">{{label}}</label>
  <view class="pm-input__control">
    <view wx:if="{{usePrefixSlot}}" class="pm-input__affix pm-input__affix--prefix">
      <slot name="prefix"></slot>
    </view>
    <input
      class="pm-input__field"
      value="{{value}}"
      placeholder="{{placeholder}}"
      type="{{type}}"
      disabled="{{disabled}}"
      bindinput="handleInput"
      bindblur="handleBlur"
    />
    <view
      wx:if="{{clearable && !disabled && value}}"
      class="pm-input__clear"
      bindtap="handleClear"
    >Ã—</view>
    <view wx:if="{{useSuffixSlot}}" class="pm-input__affix pm-input__affix--suffix">
      <slot name="suffix"></slot>
    </view>
  </view>
  <view wx:if="{{helper && !error}}" class="pm-input__helper">{{helper}}</view>
  <view wx:if="{{error}}" class="pm-input__error">{{error}}</view>
</view>
