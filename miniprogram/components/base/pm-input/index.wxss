.pm-input {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.pm-input--block {
  width: 100%;
}

.pm-input__label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.pm-input__control {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--color-bg-primary);
  border: 2rpx solid var(--color-border-secondary);
  border-radius: var(--radius-sm);
  padding: 0 var(--space-3);
}

.pm-input__affix {
  display: inline-flex;
  align-items: center;
  color: var(--color-text-secondary);
}

.pm-input__affix--prefix {
  margin-right: var(--space-2);
}

.pm-input__affix--suffix {
  margin-left: var(--space-2);
}

.pm-input__field {
  flex: 1;
  min-height: 72rpx;
  font-size: var(--text-base);
  background: transparent;
}

.pm-input__field:focus {
  outline: none;
}

.pm-input--disabled .pm-input__control {
  background: var(--color-border-secondary);
  color: var(--color-text-tertiary);
}

.pm-input__clear {
  font-size: var(--text-sm);
  color: var(--color-text-tertiary);
  padding: 4rpx;
}

.pm-input__helper {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.pm-input__error {
  font-size: var(--text-sm);
  color: var(--color-danger);
}
