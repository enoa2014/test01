.pm-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background: var(--color-primary);
  color: var(--color-bg-primary);
  font-weight: var(--font-medium);
  line-height: 1;
  min-width: 32rpx;
  padding: 0 var(--space-2);
  font-size: var(--text-xs);
  border: 1rpx solid transparent;
  transition: background-color .18s ease, color .18s ease, border-color .18s ease, box-shadow .18s ease;
}

.pm-badge--block {
  min-width: auto;
  border-radius: var(--radius-base);
}

.pm-badge--size-small {
  min-width: 24rpx;
  font-size: var(--text-xs);
  padding: 0 var(--space-1);
}

.pm-badge--size-medium {
  min-width: 32rpx;
  font-size: var(--text-xs);
  padding: 0 var(--space-2);
}

.pm-badge--size-large {
  min-width: 40rpx;
  font-size: var(--text-sm);
  padding: 0 var(--space-3);
}

.pm-badge--type-primary {
  background: var(--color-primary);
  color: var(--color-bg-primary);
}

.pm-badge--type-success {
  background: var(--color-success);
  color: var(--color-bg-primary);
}

/* P2-1: 提升 warning 徽章对比度 */
.pm-badge--type-warning {
  background: var(--color-warning);
  color: var(--color-bg-primary);
}

.pm-badge--type-danger {
  background: var(--color-danger);
  color: var(--color-bg-primary);
}

.pm-badge--type-secondary {
  background: var(--color-info);
  color: var(--color-bg-primary);
}

/* Variants */
.pm-badge--variant-solid { box-shadow: var(--shadow-xs, none); }

.pm-badge--variant-soft { border-color: var(--color-border-secondary, transparent); }
.pm-badge--type-primary.pm-badge--variant-soft { background: var(--color-primary-light, rgba(51,102,255,0.16)); color: var(--color-primary); }
.pm-badge--type-success.pm-badge--variant-soft { background: var(--color-success-light, rgba(34,197,94,0.16)); color: var(--color-success); }
.pm-badge--type-warning.pm-badge--variant-soft { background: var(--color-warning-light, rgba(250,204,21,0.22)); color: var(--color-warning-dark, #a16207); border-color: var(--color-warning, #f59e0b); }
.pm-badge--type-danger.pm-badge--variant-soft { background: var(--color-danger-light, rgba(239,68,68,0.16)); color: var(--color-danger); }
.pm-badge--type-secondary.pm-badge--variant-soft { background: var(--color-info-light, rgba(59,130,246,0.16)); color: var(--color-info); }

.pm-badge--variant-outline { background: transparent !important; }
.pm-badge--type-primary.pm-badge--variant-outline { color: var(--color-primary); border-color: var(--color-primary); }
.pm-badge--type-success.pm-badge--variant-outline { color: var(--color-success); border-color: var(--color-success); }
.pm-badge--type-warning.pm-badge--variant-outline { color: var(--color-warning, #f59e0b); border-color: var(--color-warning, #f59e0b); }
.pm-badge--type-danger.pm-badge--variant-outline { color: var(--color-danger); border-color: var(--color-danger); }
.pm-badge--type-secondary.pm-badge--variant-outline { color: var(--color-info); border-color: var(--color-info); }

.pm-badge--dotted {
  width: 16rpx;
  height: 16rpx;
  min-width: 16rpx;
  padding: 0;
}

.pm-badge__content {
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pm-badge--dotted .pm-badge__content {
  display: none;
}
