.pm-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3) var(--space-6);
  border-radius: 12rpx;
  font-weight: 500;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
  border: 2rpx solid var(--color-border-secondary);
  min-height: 72rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  text-align: center;
}

.pm-button:active:not(.pm-button--disabled) {
  transform: scale(0.97);
}

.pm-button--default {
  background-color: var(--color-bg-tertiary);
  color: var(--color-text-primary);
  border: none;
  box-shadow: none;
}

.pm-button--default:active:not(.pm-button--disabled) {
  background-color: var(--color-bg-secondary);
}

.pm-button--primary {
  background: var(--gradient-primary-button);
  color: var(--color-bg-primary);
  border: none;
  box-shadow: 0 4rpx 12rpx var(--interaction-shadow-primary);
}

.pm-button--primary:active:not(.pm-button--disabled) {
  box-shadow: 0 2rpx 8rpx var(--interaction-shadow-primary-hover);
}

.pm-button--secondary {
  background-color: var(--color-secondary);
  color: var(--color-bg-primary);
  border-color: var(--color-secondary);
}

.pm-button--danger {
  background-color: var(--color-danger);
  color: var(--color-bg-primary);
  border-color: var(--color-danger);
}

.pm-button--ghost {
  background-color: transparent;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  box-shadow: none;
}

/* 优先级更高的ghost样式，确保覆盖primary/secondary/danger的背景 */
.pm-button--ghost.pm-button--primary {
  background: transparent;
  background-color: transparent;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  box-shadow: none;
}

.pm-button--ghost.pm-button--primary:active:not(.pm-button--disabled) {
  background-color: var(--interaction-hover-primary-light);
  box-shadow: none;
}

.pm-button--ghost:active:not(.pm-button--disabled) {
  background-color: var(--interaction-hover-primary-light);
}

.pm-button--ghost.pm-button--secondary {
  background: transparent;
  background-color: transparent;
  color: var(--color-secondary);
  border: 2rpx solid var(--color-secondary);
  box-shadow: none;
}

.pm-button--ghost.pm-button--secondary:active:not(.pm-button--disabled) {
  background-color: var(--interaction-hover-secondary-light);
}

.pm-button--ghost.pm-button--danger {
  background: transparent;
  background-color: transparent;
  color: var(--color-danger);
  border: 2rpx solid var(--color-danger);
  box-shadow: none;
}

.pm-button--ghost.pm-button--danger:active:not(.pm-button--disabled) {
  background-color: var(--interaction-hover-danger-light);
}

.pm-button--small {
  padding: var(--space-2) var(--space-4);
  font-size: 28rpx;
  min-height: 64rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.pm-button--medium {
  font-size: var(--text-base);
}

.pm-button--large {
  padding: var(--space-4) var(--space-8);
  font-size: var(--text-md);
  min-height: 96rpx;
}

.pm-button--block {
  width: 100%;
}

.pm-button--disabled {
  background-color: var(--color-text-disabled);
  color: var(--color-text-tertiary);
  border-color: var(--color-border-secondary);
  opacity: 0.6;
  box-shadow: none;
}

.pm-button--elevated {
  box-shadow: var(--shadow-sm);
}

.pm-button--elevated.pm-button--primary,
.pm-button--elevated.pm-button--secondary,
.pm-button--elevated.pm-button--danger {
  box-shadow: 0 6rpx 16rpx var(--interaction-shadow-general);
}

.pm-button__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  width: 100%;
}

.pm-button__text {
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  line-height: 1;
}

.pm-button__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-sm);
  line-height: 1;
}

.pm-button__icon--left {
  margin-right: var(--space-2);
}

.pm-button__icon--right {
  margin-left: var(--space-2);
}

.pm-button__slot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.pm-button__spinner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid var(--overlay-inverse40);
  border-top-color: var(--color-bg-primary);
  margin-right: var(--space-3);
  animation: pm-button-spin 1s linear infinite;
}

@keyframes pm-button-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
