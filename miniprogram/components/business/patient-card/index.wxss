@import "/styles/foundation.wxss";

.patient-card {
  display: block;
}

.patient-card__header {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.patient-card__avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-bg-primary);
  font-weight: var(--font-semibold);
  font-size: var(--text-lg);
}

.patient-card__avatar-text {
  line-height: 1;
}

.patient-card__title {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.patient-card__title-row {
  display: flex;
  gap: var(--space-2);
  align-items: center;
}

.patient-card__name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-card__age {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

/* P0-5: 扩大选择框触控区域至88rpx */
.patient-card__select {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 88rpx;
  min-height: 88rpx;
  margin-left: auto;
  margin-right: calc(var(--space-3) * -1);
}

.patient-card__select-icon {
  font-size: var(--text-xl);
  color: var(--color-text-secondary);
  pointer-events: none;
  transition: color 0.2s ease, transform 0.2s ease;
}

.patient-card__select:active .patient-card__select-icon {
  transform: scale(0.9);
  color: var(--color-primary);
}

.patient-card__badges {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
}

.patient-card__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  margin-top: var(--space-3);
}

.patient-card__primary {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}

.patient-card__secondary {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.patient-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.patient-card__info {
  display: grid;
  gap: var(--space-1);
  margin-top: var(--space-2);
}

.patient-card__info-item {
  display: flex;
  justify-content: space-between;
  gap: var(--space-3);
}

.patient-card__info-label {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.patient-card__info-value {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  text-align: right;
}

.patient-card__tag {
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-base);
  background-color: var(--color-bg-tertiary);
  color: var(--color-text-secondary);
  font-size: var(--text-xs);
}

.patient-card__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
}

.patient-card--detail .patient-card__tag {
  font-size: var(--text-sm);
}
