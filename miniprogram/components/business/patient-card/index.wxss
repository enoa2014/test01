@import '/styles/foundation.wxss';

/* P1-5: 长按操作视觉反馈 - 微动画 */
.patient-card {
  display: block;
  transition: transform 0.15s ease-out;
}

.patient-card:active {
  transform: scale(0.98);
}

.patient-card__header {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.patient-card__avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-bg-primary);
  font-weight: var(--font-semibold);
  font-size: var(--text-lg);
}

.patient-card__avatar-text {
  line-height: 1;
}

.patient-card__title {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.patient-card__title-row {
  display: flex;
  gap: var(--space-2);
  align-items: center;
}

/* P1-3: 优化视觉层级 - 增强标题字号和字重 */
.patient-card__name {
  font-size: var(--text-xl); /* 从36rpx提升到44rpx */
  font-weight: var(--font-bold); /* 从600提升到700 */
  color: var(--color-text-primary);
  line-height: 1.2; /* 增加行高提升可读性 */
}

/* P1-3: 优化视觉层级 - 收敛次要信息字号 */
.patient-card__age {
  font-size: var(--text-xs); /* 从24rpx减小到20rpx */
  color: var(--color-text-secondary);
  line-height: 1.4;
}

/* P0-5: 扩大选择框触控区域至88rpx */
.patient-card__select {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 88rpx;
  min-height: 88rpx;
  margin-left: auto;
  margin-right: calc(var(--space-3) * -1);
}

.patient-card__select-icon {
  font-size: var(--text-xl);
  color: var(--color-text-secondary);
  pointer-events: none;
  transition:
    color 0.2s ease,
    transform 0.2s ease;
}

.patient-card__select:active .patient-card__select-icon {
  transform: scale(0.9);
  color: var(--color-primary);
}

.patient-card__badges {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
  align-items: center;
}

/* 标签分组优化 */
.patient-card__badge {
  opacity: 0.9;
  transition: opacity 0.2s ease;
}

/* 状态标签高亮 */
.patient-card__badge--success,
.patient-card__badge--warning,
.patient-card__badge--danger {
  opacity: 1;
  font-weight: var(--font-semibold);
}

.patient-card__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  margin-top: var(--space-3);
}

.patient-card__primary {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}

.patient-card__secondary {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.patient-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.patient-card__info {
  display: grid;
  gap: var(--space-1);
  margin-top: var(--space-2);
}

.patient-card__info-item {
  display: flex;
  justify-content: space-between;
  gap: var(--space-3);
}

/* P1-3: 优化视觉层级 - 精简元数据标签 */
.patient-card__info-label {
  font-size: var(--text-xs); /* 保持20rpx小字号 */
  color: var(--color-text-tertiary);
  line-height: 1.5;
}

/* P1-3: 优化视觉层级 - 使用中间层级字号 */
.patient-card__info-value {
  font-size: var(--text-base); /* 从24rpx提升到28rpx使用中间层级 */
  color: var(--color-text-primary);
  font-weight: var(--font-medium); /* 增加字重突出数值 */
  text-align: right;
  line-height: 1.5;
}

.patient-card__tag {
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-base);
  background-color: var(--color-bg-tertiary);
  color: var(--color-text-secondary);
  font-size: var(--text-xs);
}

/* 媒体预览区域 */
.patient-card__media-preview {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-2);
  margin-bottom: var(--space-1);
}

.media-chip {
  display: inline-flex;
  align-items: center;
  gap: var(--space-1);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-full);
  background: var(--color-bg-secondary);
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  transition: var(--transition-fast);
  cursor: pointer;
}

.media-chip:active {
  transform: scale(0.95);
  background: var(--color-bg-tertiary);
}

.media-chip--photo {
  border-left: 3rpx solid var(--color-info);
}

.media-chip--doc {
  border-left: 3rpx solid var(--color-warning);
}

.media-icon {
  font-size: 32rpx;
  line-height: 1;
}

.media-count {
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-card--detail .patient-card__tag {
  font-size: var(--text-sm);
}
