@import "/styles/foundation.wxss";

.smart-search {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.smart-search__input-row {
  display: flex;
  gap: var(--space-2);
}

.smart-search__input {
  flex: 1;
}

.smart-search__actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.smart-search__action {
  padding: var(--space-1) var(--space-3);
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.smart-search__loading {
  font-size: var(--text-sm);
  color: var(--color-text-tertiary);
}

.smart-search__suggestions {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  background: var(--color-bg-primary);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
  padding: var(--space-3);
}

.smart-search__suggestion {
  display: flex;
  gap: var(--space-2);
  align-items: center;
  font-size: var(--text-sm);
  color: var(--color-text-primary);
}

.smart-search__suggestion-icon {
  color: var(--color-text-tertiary);
}

.smart-search__filters {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  padding: var(--space-1) 0;
}

.smart-search__filter {
  display: flex;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.smart-search__filter:active {
  transform: scale(0.95);
}

.smart-search__history {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.smart-search__history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.smart-search__history-title {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.smart-search__history-clear {
  font-size: var(--text-xs);
  color: var(--color-danger);
}

.smart-search__history-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.smart-search__history-item {
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
  background: var(--color-bg-tertiary);
  color: var(--color-text-secondary);
  font-size: var(--text-xs);
}
