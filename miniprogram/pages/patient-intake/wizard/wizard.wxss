/* 患者录入向导样式 */
.wizard-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 进度指示器 */
.progress-header {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  padding: 0 10rpx;
}

.step-item::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 50%;
  right: -50%;
  height: 2rpx;
  background-color: #ddd;
  z-index: 1;
}

.step-item:last-child::after {
  display: none;
}

.step-item.active::after,
.step-item.completed::after {
  background-color: #1aad19;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #999;
  background-color: #ddd;
  position: relative;
  z-index: 2;
}

.step-item.active .step-number {
  color: #fff;
  background-color: #1aad19;
}

.step-item.completed .step-number {
  color: #fff;
  background-color: #1aad19;
}

.step-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
  line-height: 1.2;
}

.step-item.active .step-label {
  color: #1aad19;
  font-weight: bold;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.required-count {
  color: #e64340;
}

/* 步骤标题 */
.step-header {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.required-fields {
  font-size: 26rpx;
  color: #666;
}

.required-label {
  color: #e64340;
}

.required-list {
  color: #333;
}

/* 步骤内容 */
.step-content {
  flex: 1;
  padding: 0 40rpx 40rpx;
}

.form-section {
  padding-top: 40rpx;
}

/* 表单组件 */
.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #e64340;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.form-input.error {
  border-color: #e64340;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.form-picker.error {
  border-color: #e64340;
}

.picker-display {
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 1.5;
}

.form-textarea.large {
  min-height: 200rpx;
}

.form-textarea.error {
  border-color: #e64340;
}

.textarea-container {
  position: relative;
}

.char-count {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999;
}

.min-hint {
  color: #1aad19;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  font-size: 28rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.error-text {
  font-size: 24rpx;
  color: #e64340;
  margin-top: 8rpx;
  display: block;
}

.hint-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1aad19;
}

.hint-title {
  font-size: 24rpx;
  color: #1aad19;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.example-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 上传区域 */
.upload-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
}

.upload-header {
  margin-bottom: 20rpx;
}

.upload-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #666;
}

.upload-rules {
  margin-bottom: 30rpx;
}

.rule-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.upload-area {
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.upload-list {
  margin-top: 30rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.file-item:last-child {
  border-bottom: none;
}

.file-info {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #1aad19;
  padding: 8rpx 16rpx;
  border: 1rpx solid #1aad19;
  border-radius: 4rpx;
  background-color: transparent;
}

.action-btn.delete {
  color: #e64340;
  border-color: #e64340;
}

/* 核对页面 */
.review-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
}

.review-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.review-group {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.review-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1aad19;
  margin-bottom: 20rpx;
}

.review-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.item-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
  flex-shrink: 0;
}

.item-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.item-value.situation {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: -8rpx;
}

.completion-status {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-item.incomplete {
  color: #e64340;
}

.status-item.completed {
  color: #1aad19;
}

.status-icon {
  font-size: 28rpx;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 底部操作区 */
.action-bar {
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #e0e0e0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
}

.btn-primary[disabled] {
  background-color: #ccc;
  color: #999;
}

.btn-success {
  background-color: #1aad19;
  color: #fff;
}

.btn-success[disabled] {
  background-color: #ccc;
  color: #999;
}

.draft-info {
  text-align: center;
  margin-top: 20rpx;
}

.draft-text {
  font-size: 24rpx;
  color: #1aad19;
}

/* 草稿弹窗 */
.draft-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.modal-btn.secondary {
  background-color: #f0f0f0;
  color: #666;
}

.modal-btn.primary {
  background-color: #1aad19;
  color: #fff;
}