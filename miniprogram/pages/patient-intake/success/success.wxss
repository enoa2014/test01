/* 入住成功页面样式 */
.success-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  display: flex;
  flex-direction: column;
}

/* 成功头部 */
.success-header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounce 0.6s ease-out;
}

@keyframes bounce {
  0% {
    transform: scale(0.3) rotate(-10deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.1) rotate(5deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.success-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1aad19;
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 内容区域 */
.success-content {
  flex: 1;
  padding: 0 40rpx;
}

/* 摘要卡片 */
.summary-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-id {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.summary-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
}

.situation-summary {
  background-color: #f8fffe;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #1aad19;
}

.summary-label {
  font-size: 26rpx;
  color: #1aad19;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.summary-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 提醒卡片 */
.reminder-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.reminder-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.reminder-list {
  color: #666;
}

.reminder-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.reminder-item:last-child {
  margin-bottom: 0;
}

/* 快捷操作 */
.quick-actions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.secondary {
  background-color: #f5f5f5;
  color: #666;
}

.action-btn.secondary:active {
  background-color: #e8e8e8;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 底部操作 */
.bottom-actions {
  padding: 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn:active {
  background-color: #179b16;
}