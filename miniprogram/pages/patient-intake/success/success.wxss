/* 入住成功页面样式 */
.success-container {
  min-height: 100vh;
  background: var(--gradient-info-light);
  display: flex;
  flex-direction: column;
}

/* 成功头部 */
.success-header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  animation: bounce 0.6s ease-out;
}

@keyframes bounce {
  0% {
    transform: scale(0.3) rotate(-10deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.1) rotate(5deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.success-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--color-success);
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 内容区域 */
.success-content {
  flex: 1;
  padding: 0 40rpx;
}

/* 摘要卡片 */
.summary-card {
  background-color: var(--color-bg-primary);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-floating);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--color-border-secondary);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.record-id {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  background-color: var(--color-bg-tertiary);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.summary-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  min-width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 500;
  text-align: right;
  flex: 1;
}

.situation-summary {
  background-color: var(--bg-info-soft);
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid var(--color-success);
}

.summary-label {
  font-size: 26rpx;
  color: var(--color-success);
  margin-bottom: 12rpx;
  font-weight: bold;
}

.summary-text {
  font-size: 26rpx;
  color: var(--color-text-primary);
  line-height: 1.5;
}

/* 提醒卡片 */
.reminder-card {
  background-color: var(--color-bg-primary);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: var(--shadow-floating);
}

.reminder-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
}

.reminder-list {
  color: var(--color-text-secondary);
}

.reminder-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.reminder-item:last-child {
  margin-bottom: 0;
}

/* 快捷操作 */
.quick-actions {
  background-color: var(--color-bg-primary);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: var(--shadow-floating);
}

.action-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-button {
  flex: 1;
}

/* 底部操作 */
.bottom-actions {
  padding: 40rpx;
  background-color: var(--color-bg-primary);
  border-top: 1rpx solid var(--color-border-secondary);
}

.primary-action {
  font-weight: var(--font-semibold);
}
