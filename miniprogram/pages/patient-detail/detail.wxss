.detail-container {
  min-height: 100vh;
  background: var(--color-bg-secondary);
}

.detail-scroll {
  max-height: 100vh;
  padding: var(--space-4) var(--space-5) var(--space-6);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  /* 安全区适配，避免底部被系统手势遮挡 */
  padding-bottom: calc(var(--space-6) + env(safe-area-inset-bottom));
}

.placeholder,
.error {
  padding: var(--space-5);
  text-align: center;
  color: var(--color-text-secondary);
}

.error {
  color: var(--color-danger);
}

/* P0-4: 骨架屏加载状态 - 参考列表页实现 */
.detail-skeleton {
  padding: var(--space-4) var(--space-5);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

@keyframes skeleton-pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.4;
  }
}

.skeleton-header,
.skeleton-section {
  animation: skeleton-pulse 1.5s ease-in-out infinite;
}

.skeleton-header {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.skeleton-name {
  width: 240rpx;
  height: 48rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
  margin: 0 auto;
}

.skeleton-metrics {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-3);
}

.skeleton-metric-card {
  min-height: 120rpx;
  background: var(--color-bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--space-3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
}

.skeleton-icon {
  width: 48rpx;
  height: 48rpx;
  background: var(--color-bg-tertiary);
  border-radius: 50%;
}

.skeleton-label {
  width: 80rpx;
  height: 24rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-sm);
}

.skeleton-value {
  width: 100rpx;
  height: 32rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-sm);
}

.skeleton-section {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.skeleton-section-title {
  width: 160rpx;
  height: 36rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
}

.skeleton-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-2) 0;
}

.skeleton-info-row .skeleton-label {
  width: 140rpx;
  height: 28rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-sm);
}

.skeleton-info-row .skeleton-value {
  width: 200rpx;
  height: 28rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-sm);
}

.skeleton-media-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-3);
}

.skeleton-media-card {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-media-image {
  width: 100%;
  height: 220rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
}

.skeleton-media-name {
  width: 60%;
  height: 28rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-sm);
}

.patient-header {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  box-shadow: var(--shadow-base);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.patient-name-row {
  display: flex;
  align-items: center;
  justify-content: center;
}

.patient-detail-name {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

/* 运营指标卡片网格 - 参考列表页统计卡片 */
.patient-metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160rpx, 1fr));
  gap: var(--space-3);
}

/* 信息卡片编辑工具 */
.info-card__tools { margin-left: auto; }
.info-card__edit { font-size: var(--text-sm); color: var(--color-primary); }

/* 区块工具条 */
.section-tools { margin-left: auto; }
.section-action { font-size: var(--text-sm); color: var(--color-primary); }

/* 记录行操作 */
.record-actions {
  display: flex;
  gap: var(--space-3);
  justify-content: flex-end;
  margin-bottom: var(--space-2);
}
.record-action { font-size: var(--text-sm); color: var(--color-primary); }
.record-action.danger { color: var(--color-danger); }

/* 对话框内部可滚动区域 */
.dialog-scroll {
  max-height: 60vh;
}

.metric-card {
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-1);
  padding: var(--space-3);
  border-radius: var(--radius-lg);
  background: var(--color-bg-secondary);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
  position: relative;
  overflow: hidden;
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: var(--color-border-secondary);
  transition: var(--transition-base);
}

.metric-card__icon {
  font-size: 48rpx;
  line-height: 1;
  opacity: 0.9;
}

.metric-card__label {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  font-weight: var(--font-medium);
}

.metric-card__tool {
  position: absolute;
  top: var(--space-2);
  right: var(--space-2);
  font-size: var(--text-xs);
  color: var(--color-info);
  padding: 6rpx 10rpx;
  background: var(--bg-info-soft);
  border-radius: var(--radius-sm);
}

.metric-card__value {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  text-align: center;
}

/* 状态卡片样式 */
.metric-card--status.status-in-care::before {
  background: linear-gradient(90deg, var(--color-success) 0%, #52c41a 100%);
}

.metric-card--status.status-in-care {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.08) 0%, rgba(82, 196, 26, 0.04) 100%);
}

.metric-card--status.status-in-care .metric-card__value {
  color: var(--color-success);
}

.metric-card--status.status-pending::before {
  background: linear-gradient(90deg, #faad14 0%, #ffc53d 100%);
}

.metric-card--status.status-pending {
  background: linear-gradient(135deg, rgba(250, 173, 20, 0.08) 0%, rgba(250, 173, 20, 0.04) 100%);
}

.metric-card--status.status-pending .metric-card__value {
  color: var(--color-warning);
}

.metric-card--status.status-checked-out::before {
  background: linear-gradient(
    90deg,
    var(--color-text-secondary) 0%,
    var(--color-text-tertiary) 100%
  );
}

.metric-card--status.status-checked-out {
  background: var(--color-bg-tertiary);
}

.metric-card--status.status-checked-out .metric-card__value {
  color: var(--color-text-secondary);
}

.metric-card--status.status-followup::before {
  background: linear-gradient(90deg, var(--color-info) 0%, #40a9ff 100%);
}

.metric-card--status.status-followup {
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.08) 0%, rgba(24, 144, 255, 0.04) 100%);
}

.metric-card--status.status-followup .metric-card__value {
  color: var(--color-info);
}

/* 入住次数卡片 */
.metric-card--admissions::before {
  background: linear-gradient(90deg, var(--color-info) 0%, #40a9ff 100%);
}

.metric-card--admissions {
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.06) 0%, rgba(24, 144, 255, 0.03) 100%);
}

.metric-card--admissions .metric-card__value {
  color: var(--color-info);
}

/* 最近入住卡片 */
.metric-card--recent::before {
  background: linear-gradient(90deg, #722ed1 0%, #9254de 100%);
}

.metric-card--recent {
  background: linear-gradient(135deg, rgba(114, 46, 209, 0.06) 0%, rgba(114, 46, 209, 0.03) 100%);
}

.metric-card--recent .metric-card__value {
  color: #722ed1;
  font-size: var(--text-sm);
}

/* 编辑工具栏独立一行 - P0-2 触控优化 */
.edit-toolbar-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: var(--space-2);
  min-height: 88rpx;
}

.edit-toolbar-row .pm-button {
  min-height: 88rpx;
}

/* 卡片内操作条（模块就地编辑） */
.card-action-bar {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  margin-top: var(--space-3);
}

/* 顶部轻提示条 */
.inline-toast {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 100;
  display: flex;
  justify-content: center;
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-sm);
  border-bottom: 2rpx solid var(--color-border-secondary);
  background: var(--bg-info-soft);
  color: var(--color-info);
}
.inline-toast.success { background: var(--bg-success-soft); color: var(--color-success); }
.inline-toast.error { background: var(--bg-danger-soft); color: var(--color-danger); }

.edit-hint {
  margin-top: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.edit-mode-banner {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  margin-top: var(--space-3);
  padding: var(--space-3);
  border-radius: var(--radius-md);
  background: linear-gradient(135deg, #fff9e6 0%, #fff3d6 100%);
  border: 2rpx solid #ffd966;
  box-shadow: 0 2rpx 8rpx rgba(255, 193, 7, 0.15);
}

.edit-mode-icon {
  font-size: var(--text-lg);
  line-height: 1;
}

.edit-mode-text {
  flex: 1;
  font-size: var(--text-sm);
  color: #8b6914;
  font-weight: var(--font-medium);
}

.info-section,
.form-section,
.intake-records-section,
.operation-log-section,
.media-section,
.record-item {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  box-shadow: var(--shadow-sm);
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.section-title,
.form-section-title,
.record-title,
.text-preview-title {
  font-size: var(--text-md);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  display: block;
}

.info-row,
.record-field {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: var(--space-2) 0;
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.section-header--sub { display: flex; align-items: center; justify-content: space-between; margin-bottom: var(--space-3); }
.records-controls { display: flex; align-items: center; gap: var(--space-3); }

/* 时间轴样式 */
.timeline { position: relative; border-left: 2rpx solid var(--color-border-secondary); margin-left: 20rpx; }
.timeline-row { position: relative; display: flex; align-items: flex-start; }
.timeline-dot { position: absolute; left: -7rpx; top: 22rpx; width: 12rpx; height: 12rpx; border-radius: 50%; background: var(--color-primary); box-shadow: 0 0 0 2rpx var(--color-bg-primary); }
.timeline-row .intake-record-item { margin-left: 12rpx; }

.records-placeholder {
  padding: var(--space-3);
  text-align: center;
  color: var(--color-text-secondary);
}

.records-error {
  padding: var(--space-3);
  text-align: center;
  color: var(--color-danger);
}

/* 操作日志样式（简洁列表） */
.operation-log-section {
  margin-top: var(--space-4);
}
.operation-log-item {
  padding: var(--space-3) 0;
  border-bottom: 2rpx solid var(--color-border-secondary);
}
.operation-log-item:last-child {
  border-bottom: none;
}
.operation-log-item .log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-1);
}
.operation-log-item .log-time {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}
.operation-log-item .log-operator {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}
.operation-log-item .log-message {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
}

.info-row:last-child,
.record-field:last-child {
  border-bottom: none;
}

.label,
.field-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.value {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  margin-left: var(--space-3);
  flex: 1;
  text-align: right;
}

.records {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.media-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.media-quota {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.quota-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.quota-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quota-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.quota-value {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.quota-progress {
  width: 100%;
  height: 12rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.quota-progress-bar {
  height: 100%;
  border-radius: var(--radius-lg);
  transition:
    width 0.3s ease,
    background 0.3s ease;
}

.quota-progress-bar.success {
  background: linear-gradient(90deg, var(--color-success) 0%, #52c41a 100%);
}

.quota-progress-bar.warning {
  background: linear-gradient(90deg, #faad14 0%, #ffc53d 100%);
}

.quota-progress-bar.danger {
  background: linear-gradient(90deg, var(--color-danger) 0%, #ff7875 100%);
}

.media-tabs {
  display: flex;
  gap: var(--space-2);
}

.media-tab-button {
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--color-border-primary);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  background: var(--color-bg-primary);
  transition: var(--transition-base);
}

.media-tab-button.active {
  border-color: var(--color-info);
  color: var(--color-info);
  background: var(--bg-info-soft);
}

.media-status {
  font-size: var(--text-sm);
  color: var(--color-info);
}

.media-actions {
  display: flex;
  justify-content: flex-end;
}

.media-action-button {
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-base);
  background: var(--color-info);
  color: var(--color-bg-primary);
  font-size: var(--text-sm);
  text-align: center;
}

.media-action-button.disabled {
  opacity: 0.6;
}

.media-upload-hint {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.media-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.media-card-item {
  width: calc(50% - 12rpx);
  min-width: 260rpx;
  display: flex;
}

.media-card__card {
  flex: 1;
}

.media-card-item .pm-card__header {
  margin-bottom: 0;
  padding: 0;
  display: block;
}

.media-card-item .pm-card__footer {
  margin-top: 0;
  padding: 0;
  border-top: none;
}

.media-card__image {
  width: 100%;
  height: 220rpx;
  display: block;
  background: var(--color-bg-tertiary);
  border-top-left-radius: var(--radius-md);
  border-top-right-radius: var(--radius-md);
  overflow: hidden;
}

.media-card__thumbnail {
  width: 100%;
  height: 100%;
  display: block;
}

.media-card__content {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  padding: var(--space-3) var(--space-4);
}

.media-card__name {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.media-card__meta {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.media-card__footer {
  display: flex;
  gap: var(--space-2);
  padding: 0 var(--space-4) var(--space-4);
}

.media-card__button {
  flex: 1;
  text-align: center;
  padding: var(--space-2) 0;
  border-radius: var(--radius-md);
  background: var(--color-bg-tertiary);
  color: var(--color-info);
  font-size: var(--text-sm);
  min-height: 72rpx; /* 触控目标对齐 pm-button */
}

.media-card__button.danger {
  color: var(--color-danger);
}

.media-card__button.loading {
  color: var(--color-text-tertiary);
}

.media-table {
  border: 2rpx solid var(--color-border-secondary);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.media-table-header,
.media-table-row {
  display: flex;
  align-items: center;
  padding: var(--space-3) var(--space-4);
}

.media-table-header {
  background: var(--color-bg-tertiary);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.media-table-row {
  border-top: 2rpx solid var(--color-border-secondary);
  color: var(--color-text-secondary);
}

.media-cell {
  font-size: var(--text-sm);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.media-cell.name {
  flex: 2.6;
  flex-direction: column;
  align-items: flex-start;
}

.media-cell.type {
  flex: 1;
}

.media-cell.size {
  flex: 1.2;
}

.media-cell.time {
  flex: 1.8;
}

.media-cell.uploader {
  flex: 1.2;
}

.media-cell.actions {
  flex: 1.8;
  justify-content: flex-end;
  gap: var(--space-2);
}

.doc-name {
  color: var(--color-info);
  font-size: var(--text-sm);
}

.doc-name.disabled {
  color: var(--color-text-tertiary);
}

.doc-preview-hint {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.doc-action-button {
  min-width: 120rpx;
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  background: var(--color-bg-tertiary);
  text-align: center;
  font-size: var(--text-sm);
  color: var(--color-info);
  min-height: 72rpx; /* 触控目标对齐 pm-button */
}

.doc-action-button.danger {
  color: var(--color-danger);
}

.doc-action-button.loading {
  color: var(--color-text-tertiary);
}

/* 按压反馈（与 hover-class 配合） */
.media-card__button.hover,
.doc-action-button.hover,
.media-tab-button.hover,
.sort-button.hover {
  transform: scale(0.98);
  box-shadow: var(--shadow-xs);
}

/* 媒体区空状态 */
.media-empty-state {
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
  color: var(--color-text-secondary);
}
.media-empty-icon { font-size: 48rpx; line-height: 1; }
.media-empty-text { font-size: var(--text-sm); margin-bottom: var(--space-1); }

.media-retry {
  margin-top: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-info);
}

.text-preview-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: var(--overlay-strong);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.text-preview-dialog {
  width: 80%;
  max-width: 680rpx;
  max-height: 80%;
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.text-preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-3) var(--space-4);
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.text-preview-close {
  font-size: var(--text-sm);
  color: var(--color-info);
}

.text-preview-content {
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.picker-value,
.text-area {
  width: 100%;
  min-height: 64rpx;
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--color-border-secondary);
  background: var(--color-bg-tertiary);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  box-sizing: border-box;
}

.text-area {
  min-height: 160rpx;
  line-height: 1.6;
}

.text-area.narrative {
  min-height: 220rpx;
}

.picker-value {
  display: flex;
  align-items: center;
}

.field-error {
  font-size: var(--text-xs);
  color: var(--color-danger);
}

.operation-log-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.operation-log-item .log-header {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.operation-log-item .log-message {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-2);
}

.sort-button {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--color-border-primary);
  background: var(--color-bg-primary);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  transition: var(--transition-base);
  box-shadow: var(--shadow-xs);
}

.sort-button:hover {
  border-color: var(--color-text-tertiary);
  box-shadow: var(--shadow-sm);
  transform: translateY(-1rpx);
}

.sort-button:active {
  transform: scale(0.97) translateY(0);
  box-shadow: var(--shadow-xs);
}

.sort-button.desc {
  border-color: var(--color-info);
  background: var(--gradient-info-light);
  color: var(--color-info);
  box-shadow: var(--shadow-sm);
}

.sort-button.desc:hover {
  background: var(--gradient-info-light-hover);
  box-shadow: var(--shadow-md);
}

.sort-button.asc {
  border-color: var(--color-success);
  background: var(--gradient-success-light);
  color: var(--color-success);
  box-shadow: var(--shadow-sm);
}

.sort-button.asc:hover {
  background: var(--gradient-success-light-hover);
  box-shadow: var(--shadow-md);
}

.sort-icon {
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  line-height: 1;
  transform: translateY(-1rpx);
  transition: transform 0.2s ease;
}

/* P0: 入住记录可折叠优化 */
.intake-record-item {
  margin-bottom: var(--space-3);
}

.record-header-main {
  background: var(--color-bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--space-3);
  transition: var(--transition-base);
  cursor: pointer;
}

.record-header-main:active {
  background: var(--color-bg-tertiary);
  transform: scale(0.99);
}

.record-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-2);
}

.record-time {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}
.record-time-sep { margin: 0 var(--space-1); color: var(--color-text-tertiary); }
.record-time.checkout { color: var(--color-text-secondary); font-weight: var(--font-medium); }
.duration-badge { font-size: var(--text-xs); color: var(--color-info); margin: 0 var(--space-1); }

.record-expand-control {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.record-status {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  padding: var(--space-1) var(--space-2);
  background: var(--color-bg-primary);
  border-radius: var(--radius-sm);
}

.record-expand-icon {
  font-size: var(--text-xs);
  color: var(--color-info);
  font-weight: var(--font-semibold);
  padding: var(--space-1) var(--space-2);
  background: var(--bg-info-soft);
  border-radius: var(--radius-sm);
  transition: var(--transition-base);
}

.record-expand-icon {
  display: inline-block;
  transform: rotate(0deg);
}
.record-expand-icon.expanded {
  transform: rotate(90deg);
}

.record-preview {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.preview-hospital {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}

.preview-diagnosis {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.record-details {
  margin-top: var(--space-3);
  padding: var(--space-3);
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  border-left: 4rpx solid var(--color-info);
  box-shadow: var(--shadow-sm);
  animation: slideDown 0.2s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    padding-top: 0;
    padding-bottom: 0;
  }
  to {
    opacity: 1;
    max-height: 2000rpx;
    padding-top: var(--space-3);
    padding-bottom: var(--space-3);
  }
}

.record-details .record-section {
  margin-bottom: var(--space-3);
}

.record-details .record-section:last-child {
  margin-bottom: 0;
}

.record-details .record-section-title {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  display: flex;
  align-items: center;
  gap: var(--space-1);
}

.record-details .record-section-title::before {
  content: '';
  width: 6rpx;
  height: 6rpx;
  background: var(--color-info);
  border-radius: 50%;
}

.record-details .record-field {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  padding: var(--space-2) 0;
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.record-details .record-field:last-child {
  border-bottom: none;
}

.record-details .field-label {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  font-weight: var(--font-medium);
}

.record-details .field-value {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  line-height: 1.6;
}

/* P1: 信息区域卡片化 */
.info-card-grid {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.info-card {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  border: 2rpx solid var(--color-border-secondary);
  transition: var(--transition-base);
  position: relative;
}

.info-card:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--color-border-primary);
}

.info-card-header {
  padding: var(--space-3) var(--space-4);
  background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg-primary) 100%);
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.info-card-title {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.info-card-body {
  padding: var(--space-4);
}

.info-card-body .info-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: var(--space-2) 0;
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.info-card-body .info-row:last-child {
  border-bottom: none;
}

.info-card-body .label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  min-width: 140rpx;
}

.info-card-body .value {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  flex: 1;
  text-align: right;
  word-break: break-all;
}

.info-card--basic {
  border-color: rgb(var(--brand-blue, 46 134 171) / 0.35);
  background: linear-gradient(
    135deg,
    rgb(var(--brand-blue-soft, var(--brand-blue)) / 0.4) 0%,
    var(--color-bg-primary) 100%
  );
}

.info-card--basic .info-card-header {
  background: linear-gradient(
    135deg,
    rgb(var(--brand-blue, 46 134 171) / 0.2),
    rgb(var(--brand-blue-soft, var(--brand-blue)) / 0.08)
  );
}

.info-card--contact {
  border-color: rgb(var(--peach-500, 245 158 116) / 0.35);
  background: linear-gradient(
    135deg,
    rgb(var(--peach-300, var(--peach-500, 245 158 116)) / 0.35) 0%,
    var(--color-bg-primary) 100%
  );
}

.info-card--contact .info-card-header {
  background: linear-gradient(
    135deg,
    rgb(var(--peach-500, 245 158 116) / 0.22),
    rgb(var(--peach-300, var(--peach-500, 245 158 116)) / 0.08)
  );
}

.info-card--economic {
  border-color: rgb(var(--success-600, 82 196 26) / 0.32);
  background: linear-gradient(
    135deg,
    rgb(var(--success-100, 226 245 236) / 0.6) 0%,
    var(--color-bg-primary) 100%
  );
}

.info-card--economic .info-card-header {
  background: linear-gradient(
    135deg,
    rgb(var(--success-600, 82 196 26) / 0.22),
    rgb(var(--success-100, 226 245 236) / 0.12)
  );
}

/* 入住记录卡片采用同类渐变风格 */
.info-card--records {
  border-color: rgb(var(--indigo-600, 79 70 229) / 0.28);
  background: linear-gradient(
    135deg,
    rgb(var(--indigo-100, 224 231 255) / 0.55) 0%,
    var(--color-bg-primary) 100%
  );
}
.intake-records-section {
  border: 2rpx solid rgb(var(--indigo-600, 79 70 229) / 0.28);
  background: linear-gradient(
    135deg,
    rgb(var(--indigo-100, 224 231 255) / 0.55) 0%,
    var(--color-bg-primary) 100%
  );
}
.info-card--records .info-card-header {
  background: linear-gradient(
    135deg,
    rgb(var(--indigo-600, 79 70 229) / 0.22),
    rgb(var(--indigo-100, 224 231 255) / 0.12)
  );
}

/* 状态调整对话框样式（与列表页一致） */
.status-dialog__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  padding-top: var(--space-1);
}
.status-dialog__summary {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}
.status-dialog__name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}
.status-dialog__desc {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}
.status-dialog__options {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}
.status-dialog__option {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border-subtle);
  background: var(--color-surface-elevated);
}
.status-dialog__option--active {
  border-color: var(--color-primary);
  background: var(--color-primary-subtle);
}
.status-dialog__option-main {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}
.status-dialog__option-radio {
  font-size: var(--text-lg);
  color: var(--color-primary);
}
.status-dialog__option-label {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}
.status-dialog__option-tip {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}
.status-dialog__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  padding-top: var(--space-3);
}
