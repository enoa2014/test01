.detail-container {
  min-height: 100vh;
  background: var(--color-bg-secondary);
}

.detail-scroll {
  max-height: 100vh;
  padding: var(--space-4) var(--space-5) var(--space-6);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.placeholder,
.error {
  padding: var(--space-5);
  text-align: center;
  color: var(--color-text-secondary);
}

.error {
  color: var(--color-danger);
}

.patient-header {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  box-shadow: var(--shadow-base);
}

.patient-detail-name {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-3);
}

.edit-toolbar {
  display: flex;
  gap: var(--space-2);
}

.edit-button {
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  background: var(--color-info);
  color: var(--color-bg-primary);
  font-size: var(--text-sm);
}

.edit-button.primary.disabled {
  background: var(--color-text-tertiary);
  color: var(--color-bg-primary);
}

.edit-button.plain {
  background: var(--color-bg-tertiary);
  color: var(--color-text-primary);
}

.edit-hint {
  margin-top: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.info-section,
.form-section,
.intake-records-section,
.operation-log-section,
.media-section,
.record-item {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  box-shadow: var(--shadow-sm);
}

.section-title,
.form-section-title,
.record-title,
.text-preview-title {
  font-size: var(--text-md);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  display: block;
}

.info-row,
.record-field {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: var(--space-2) 0;
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.info-row:last-child,
.record-field:last-child {
  border-bottom: none;
}

.label,
.field-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.value {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  margin-left: var(--space-3);
  flex: 1;
  text-align: right;
}

.records {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.media-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.media-quota {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.media-tabs {
  display: flex;
  gap: var(--space-2);
}

.media-tab-button {
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--color-border-primary);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  background: var(--color-bg-primary);
  transition: var(--transition-base);
}

.media-tab-button.active {
  border-color: var(--color-info);
  color: var(--color-info);
  background: var(--bg-info-soft);
}

.media-status {
  font-size: var(--text-sm);
  color: var(--color-info);
}

.media-actions {
  display: flex;
  justify-content: flex-end;
}

.media-action-button {
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-base);
  background: var(--color-info);
  color: var(--color-bg-primary);
  font-size: var(--text-sm);
  text-align: center;
}

.media-action-button.disabled {
  opacity: 0.6;
}

.media-upload-hint {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.media-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
}

.media-card-item {
  width: calc(50% - 12rpx);
  min-width: 260rpx;
  display: flex;
}

.media-card__card {
  flex: 1;
}

.media-card-item .pm-card__header {
  margin-bottom: 0;
  padding: 0;
  display: block;
}

.media-card-item .pm-card__footer {
  margin-top: 0;
  padding: 0;
  border-top: none;
}

.media-card__image image {
  width: 100%;
  height: 220rpx;
  object-fit: cover;
  background: var(--color-bg-tertiary);
  border-top-left-radius: var(--radius-md);
  border-top-right-radius: var(--radius-md);
}

.media-card__content {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  padding: var(--space-3) var(--space-4);
}

.media-card__name {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.media-card__meta {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.media-card__footer {
  display: flex;
  gap: var(--space-2);
  padding: 0 var(--space-4) var(--space-4);
}

.media-card__button {
  flex: 1;
  text-align: center;
  padding: var(--space-2) 0;
  border-radius: var(--radius-md);
  background: var(--color-bg-tertiary);
  color: var(--color-info);
  font-size: var(--text-sm);
}

.media-card__button.danger {
  color: var(--color-danger);
}

.media-card__button.loading {
  color: var(--color-text-tertiary);
}

.media-table {
  border: 2rpx solid var(--color-border-secondary);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.media-table-header,
.media-table-row {
  display: flex;
  align-items: center;
  padding: var(--space-3) var(--space-4);
}

.media-table-header {
  background: var(--color-bg-tertiary);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.media-table-row {
  border-top: 2rpx solid var(--color-border-secondary);
  color: var(--color-text-secondary);
}

.media-cell {
  font-size: var(--text-sm);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.media-cell.name {
  flex: 2.6;
  flex-direction: column;
  align-items: flex-start;
}

.media-cell.type {
  flex: 1;
}

.media-cell.size {
  flex: 1.2;
}

.media-cell.time {
  flex: 1.8;
}

.media-cell.uploader {
  flex: 1.2;
}

.media-cell.actions {
  flex: 1.8;
  justify-content: flex-end;
  gap: var(--space-2);
}

.doc-name {
  color: var(--color-info);
  font-size: var(--text-sm);
}

.doc-name.disabled {
  color: var(--color-text-tertiary);
}

.doc-preview-hint {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.doc-action-button {
  min-width: 120rpx;
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  background: var(--color-bg-tertiary);
  text-align: center;
  font-size: var(--text-sm);
  color: var(--color-info);
}

.doc-action-button.danger {
  color: var(--color-danger);
}

.doc-action-button.loading {
  color: var(--color-text-tertiary);
}

.media-retry {
  margin-top: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-info);
}

.text-preview-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: var(--overlay-strong);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.text-preview-dialog {
  width: 80%;
  max-width: 680rpx;
  max-height: 80%;
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.text-preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-3) var(--space-4);
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.text-preview-close {
  font-size: var(--text-sm);
  color: var(--color-info);
}

.text-preview-content {
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.picker-value,
.text-area {
  width: 100%;
  min-height: 64rpx;
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--color-border-secondary);
  background: var(--color-bg-tertiary);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  box-sizing: border-box;
}

.text-area {
  min-height: 160rpx;
  line-height: 1.6;
}

.text-area.narrative {
  min-height: 220rpx;
}

.picker-value {
  display: flex;
  align-items: center;
}

.field-error {
  font-size: var(--text-xs);
  color: var(--color-danger);
}

.operation-log-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.operation-log-item .log-header {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.operation-log-item .log-message {
  font-size: var(--text-sm);
  color: var(--color-text-primary);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-2);
}

.sort-button {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-3);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--color-border-primary);
  background: var(--color-bg-primary);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  transition: var(--transition-base);
  box-shadow: var(--shadow-xs);
}

.sort-button:hover {
  border-color: var(--color-text-tertiary);
  box-shadow: var(--shadow-sm);
  transform: translateY(-1rpx);
}

.sort-button:active {
  transform: scale(0.97) translateY(0);
  box-shadow: var(--shadow-xs);
}

.sort-button.desc {
  border-color: var(--color-info);
  background: var(--gradient-info-light);
  color: var(--color-info);
  box-shadow: var(--shadow-sm);
}

.sort-button.desc:hover {
  background: var(--gradient-info-light-hover);
  box-shadow: var(--shadow-md);
}

.sort-button.asc {
  border-color: var(--color-success);
  background: var(--gradient-success-light);
  color: var(--color-success);
  box-shadow: var(--shadow-sm);
}

.sort-button.asc:hover {
  background: var(--gradient-success-light-hover);
  box-shadow: var(--shadow-md);
}

.sort-icon {
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  line-height: 1;
  transform: translateY(-1rpx);
  transition: transform 0.2s ease;
}
