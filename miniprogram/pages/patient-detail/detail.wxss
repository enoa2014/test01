.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.detail-scroll {
  max-height: 100vh;
  padding: 32rpx 40rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.placeholder,
.error {
  padding: 40rpx;
  text-align: center;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.patient-header {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.06);
}

.patient-detail-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
}

.info-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 20rpx;
  display: block;
}

.info-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #6b7280;
}

.value {
  font-size: 26rpx;
  color: #111827;
  margin-left: 24rpx;
  flex: 1;
  text-align: right;
}

.records {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.record-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: block;
}

.record-field {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.record-field:last-child {
  border-bottom: none;
}

.record-field .label {
  color: #4b5563;
}

.record-field .value {
  color: #1f2937;
  text-align: right;
  margin-left: 24rpx;
}