.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.detail-scroll {
  max-height: 100vh;
  padding: 32rpx 40rpx 60rpx;
  box-sizing: border-box;
}

.placeholder,
.error {
  padding: 40rpx;
  text-align: center;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.summary {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.06);
}

.patient-detail-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
  color: #111827;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.label {
  font-size: 26rpx;
  color: #6b7280;
}

.value {
  font-size: 26rpx;
  color: #111827;
  margin-left: 24rpx;
  flex: 1;
  text-align: right;
}

.records {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 24rpx;
}

.record-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.record-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: block;
}

.record-field {
  margin-bottom: 12rpx;
}

.record-field .label {
  color: #4b5563;
}

.record-field .value {
  color: #1f2937;
  text-align: left;
  margin-left: 0;
}
