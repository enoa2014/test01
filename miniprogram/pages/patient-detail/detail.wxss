.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.detail-scroll {
  max-height: 100vh;
  padding: 32rpx 40rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.placeholder,
.error {
  padding: 40rpx;
  text-align: center;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.patient-header {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.06);
}

.patient-detail-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
}

.info-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 20rpx;
  display: block;
}

.info-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #6b7280;
}

.value {
  font-size: 26rpx;
  color: #111827;
  margin-left: 24rpx;
  flex: 1;
  text-align: right;
}

.records {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.record-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: block;
}

.record-field {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.record-field:last-child {
  border-bottom: none;
}

.record-field .label {
  color: #4b5563;
}

.record-field .value {
  color: #1f2937;
  text-align: right;
  margin-left: 24rpx;
}.media-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.media-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 16rpx;
}

.media-quota {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: #4b5563;
}

.media-tabs {
  display: flex;
  gap: 16rpx;
}

.media-tab-button {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  border: 2rpx solid #d1d5db;
  font-size: 26rpx;
  color: #4b5563;
  background: #ffffff;
}

.media-tab-button.active {
  border-color: #1677ff;
  color: #1677ff;
  background: rgba(22, 119, 255, 0.08);
}

.media-status {
  font-size: 24rpx;
  color: #1677ff;
}

.media-actions {
  display: flex;
  justify-content: flex-end;
}

.media-action-button {
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: #1677ff;
  color: #ffffff;
  font-size: 26rpx;
  text-align: center;
}

.media-action-button.disabled {
  opacity: 0.6;
}

.media-upload-hint {
  font-size: 22rpx;
  color: #6b7280;
}

.media-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.media-card {
  width: calc(50% - 12rpx);
  min-width: 260rpx;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.05);
  display: flex;
  flex-direction: column;
}

.media-card image {
  width: 100%;
  height: 220rpx;
  background: #f3f4f6;
}

.media-card-info {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.media-card-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.media-card-meta {
  font-size: 22rpx;
  color: #6b7280;
}

.media-card-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 20rpx 20rpx;
}

.media-card-button {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 999rpx;
  background: #f3f4f6;
  color: #1677ff;
  font-size: 24rpx;
}

.media-card-button.danger {
  color: #ef4444;
}

.media-card-button.loading {
  color: #9ca3af;
}

.media-table {
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 14rpx rgba(15, 23, 42, 0.04);
}

.media-table-header,
.media-table-row {
  display: flex;
  align-items: center;
  padding: 18rpx 24rpx;
}

.media-table-header {
  background: #f8fafc;
  font-weight: 600;
  color: #1f2937;
}

.media-table-row {
  border-top: 1rpx solid #f1f5f9;
  color: #374151;
}

.media-cell {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.media-cell.name {
  flex: 2.6;
  flex-direction: column;
  align-items: flex-start;
}

.media-cell.type {
  flex: 1;
}

.media-cell.size {
  flex: 1.2;
}

.media-cell.time {
  flex: 1.8;
}

.media-cell.uploader {
  flex: 1.2;
}

.media-cell.actions {
  flex: 1.8;
  justify-content: flex-end;
  gap: 16rpx;
}

.doc-name {
  color: #1677ff;
  font-size: 26rpx;
}

.doc-name.disabled {
  color: #9ca3af;
}

.doc-preview-hint {
  font-size: 20rpx;
  color: #9ca3af;
}

.doc-action-button {
  min-width: 120rpx;
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #f3f4f6;
  text-align: center;
  font-size: 24rpx;
  color: #1677ff;
}

.doc-action-button.danger {
  color: #ef4444;
}

.doc-action-button.loading {
  color: #9ca3af;
}

.media-retry {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #1677ff;
}

.text-preview-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(17, 24, 39, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.text-preview-dialog {
  width: 80%;
  max-width: 680rpx;
  max-height: 80%;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.text-preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.text-preview-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.text-preview-close {
  font-size: 26rpx;
  color: #1677ff;
}

.text-preview-content {
  padding: 24rpx 28rpx;
  font-size: 26rpx;
  color: #1f2937;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}
.patient-header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.edit-toolbar {
  display: flex;
  gap: 16rpx;
}

.edit-button {
  padding: 14rpx 32rpx;
  border-radius: 999rpx;
  background: #1677ff;
  color: #ffffff;
  font-size: 26rpx;
}

.edit-button.primary.disabled {
  background: #9ca3af;
  color: #f9fafb;
}

.edit-button.plain {
  background: #f3f4f6;
  color: #1f2937;
}

.edit-hint {
  margin-top: 18rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.field-label {
  font-size: 26rpx;
  color: #4b5563;
}

.text-input,
.picker-value,
.text-area {
  width: 100%;
  min-height: 64rpx;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #d1d5db;
  background: #f9fafb;
  font-size: 26rpx;
  color: #111827;
  box-sizing: border-box;
}

.text-area {
  min-height: 160rpx;
  line-height: 1.6;
}

.text-area.narrative {
  min-height: 220rpx;
}

.picker-value {
  display: flex;
  align-items: center;
  color: #111827;
}

.field-error {
  font-size: 24rpx;
  color: #ef4444;
}

.intake-records-section,
.operation-log-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.operation-log-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.operation-log-item .log-header {
  font-size: 24rpx;
  color: #6b7280;
}

.operation-log-item .log-message {
  font-size: 26rpx;
  color: #1f2937;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.sort-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  border: 2rpx solid #d1d5db;
  background: #ffffff;
  font-size: 24rpx;
  color: #4b5563;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
  user-select: none;
}

.sort-button:hover {
  border-color: #9ca3af;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  transform: translateY(-1rpx);
}

.sort-button:active {
  transform: scale(0.97) translateY(0rpx);
  box-shadow: 0 2rpx 6rpx rgba(15, 23, 42, 0.06);
}

.sort-button.desc {
  border-color: #1677ff;
  background: linear-gradient(145deg, rgba(22, 119, 255, 0.05), rgba(22, 119, 255, 0.10));
  color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.15);
}

.sort-button.desc:hover {
  background: linear-gradient(145deg, rgba(22, 119, 255, 0.08), rgba(22, 119, 255, 0.12));
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.20);
}

.sort-button.asc {
  border-color: #10b981;
  background: linear-gradient(145deg, rgba(16, 185, 129, 0.05), rgba(16, 185, 129, 0.10));
  color: #10b981;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}

.sort-button.asc:hover {
  background: linear-gradient(145deg, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0.12));
  box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.20);
}

.sort-icon {
  font-size: 20rpx;
  font-weight: 700;
  line-height: 1;
  transform: translateY(-1rpx);
  transition: transform 0.2s ease;
}

.sort-button:active .sort-icon {
  transform: translateY(0rpx) scale(1.1);
}

.sort-text {
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.log-time {
  font-size: 24rpx;
  color: #4b5563;
}

.log-operator {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 入住记录样式 */
.intake-record-item {
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  background: #f9fafb;
}

.intake-record-item:last-child {
  margin-bottom: 0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.record-time {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.record-status {
  font-size: 22rpx;
  color: #10b981;
  background: #d1fae5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.record-section {
  margin-bottom: 20rpx;
}

.record-section:last-child {
  margin-bottom: 0;
}

.record-section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12rpx;
  display: block;
}

.record-field {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.record-field:last-child {
  margin-bottom: 0;
}

.field-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.field-value {
  font-size: 26rpx;
  color: #1f2937;
  line-height: 1.5;
  word-wrap: break-word;
}

.record-footer {
  margin-top: 16rpx;
  padding-top: 12rpx;
  border-top: 2rpx solid #e5e7eb;
  text-align: right;
}

.update-time {
  font-size: 22rpx;
  color: #9ca3af;
}
