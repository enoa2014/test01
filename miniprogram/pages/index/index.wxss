.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f5f5;
}

.hero {
  padding: 48rpx 36rpx 24rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #111827;
}

.placeholder,
.error {
  padding: 40rpx;
  text-align: center;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.patient-list {
  flex: 1;
  padding: 16rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.patient-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
}

.patient-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.patient-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.patient-gender {
  font-size: 28rpx;
  color: #4b5563;
}

.patient-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta {
  font-size: 26rpx;
  color: #6b7280;
}
