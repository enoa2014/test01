.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.hero {
  margin-bottom: 32rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #4b5563;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.primary,
.secondary {
  flex: 1;
}

.secondary {
  background-color: #2563eb;
  color: #ffffff;
}

.placeholder,
.error,
.status {
  text-align: center;
  padding: 24rpx 0;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.status {
  color: #2563eb;
  font-size: 26rpx;
}

.patient-list {
  max-height: 70vh;
}

.patient-item {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.06);
}

.patient-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.patient-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.patient-gender {
  font-size: 26rpx;
  color: #475569;
}

.patient-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta {
  font-size: 24rpx;
  color: #4b5563;
}
