.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--color-bg-secondary);
}

.hero {
  padding: var(--space-6) var(--space-5) var(--space-3);
}

.title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.hero-subtitle {
  margin-top: var(--space-1);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.placeholder,
.error {
  padding: var(--space-5);
  text-align: center;
  color: var(--color-text-secondary);
}

.error {
  color: var(--color-danger);
}

.patient-list {
  flex: 1;
  padding: var(--space-2) var(--space-3) var(--space-5);
  box-sizing: border-box;
}

.patient-card {
  margin-bottom: var(--space-3);
}

.patient-card:last-child {
  margin-bottom: 0;
}

.patient-card-body {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.patient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-2);
}

.patient-name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-count-badge.pm-badge {
  font-size: var(--text-sm);
}

.quick-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(0, 1fr));
  gap: var(--space-2);
}

.quick-item {
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
  padding: var(--space-3);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.quick-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.quick-value {
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  color: var(--color-text-primary);
}

.patient-meta {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.meta-row {
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
}

.meta-label {
  width: 160rpx;
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.meta-value {
  flex: 1;
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  word-break: break-word;
}

.toolbar {
  padding: 0 var(--space-3) var(--space-2);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.search-box {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-3);
  background: var(--color-bg-primary);
  border-radius: var(--radius-base);
  box-shadow: var(--shadow-sm);
}

.search-icon {
  font-size: var(--text-base);
  color: var(--color-text-tertiary);
  line-height: 1;
}

.search-input {
  flex: 1;
  font-size: var(--text-sm);
  color: var(--color-text-primary);
}

.search-placeholder {
  color: var(--color-text-tertiary);
}

.search-clear {
  font-size: var(--text-sm);
  color: var(--color-info);
}

.sort-picker-wrapper {
  align-self: flex-end;
}

.sort-picker {
  display: flex;
  align-items: center;
  gap: var(--space-1);
  padding: var(--space-2) var(--space-3);
  background: var(--color-bg-primary);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  box-shadow: var(--shadow-sm);
}

.sort-icon {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.action-row {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  align-items: center;
}

.action-button.pm-button {
  min-width: 0;
  padding: var(--space-2) var(--space-4);
}

.action-button.pm-button--primary {
  box-shadow: var(--shadow-sm);
}

.action-button.pm-button--primary .pm-button__text {
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
}

.empty-state-card {
  margin: var(--space-8) var(--space-4);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-6) var(--space-4);
}

.empty-illustration {
  width: 320rpx;
  height: 240rpx;
  opacity: 0.8;
}

.empty-description {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  text-align: center;
}

.empty-actions {
  display: flex;
  justify-content: center;
  padding-top: var(--space-2);
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  padding: var(--space-2) var(--space-3);
}

.skeleton-item {
  display: flex;
  gap: var(--space-3);
  padding: var(--space-4);
  border-radius: var(--radius-md);
  background: var(--color-bg-primary);
  box-shadow: var(--shadow-sm);
}

.skeleton-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-line {
  height: 24rpx;
  border-radius: var(--radius-sm);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-line--title {
  width: 40%;
  height: 32rpx;
}

.skeleton-badges {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-1);
}

.skeleton-badge {
  width: 120rpx;
  height: 32rpx;
  border-radius: var(--radius-base);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-grid {
  display: flex;
  gap: var(--space-2);
}

.skeleton-chip {
  flex: 1;
  height: 48rpx;
  border-radius: var(--radius-md);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.fab-container {
  position: fixed;
  right: var(--space-4);
  bottom: var(--space-8);
  z-index: 120;
}

.fab-button.pm-button {
  width: 112rpx;
  height: 112rpx;
  min-height: 112rpx;
  padding: 0;
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-floating);
}

.fab-button .pm-button__content {
  gap: 0;
}

.fab-button .pm-button__icon {
  font-size: var(--text-xl);
  margin: 0;
}
