.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--color-bg-secondary);
}

.hero {
  padding: var(--space-6) var(--space-5) var(--space-3);
}

.title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.hero-subtitle {
  margin-top: var(--space-1);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.placeholder,
.error {
  padding: var(--space-5);
  text-align: center;
  color: var(--color-text-secondary);
}

/* P2-7: 增强错误状态UI */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-8) var(--space-4);
  margin: var(--space-8) var(--space-4);
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.error-illustration {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: var(--color-danger-light, #FFF1F0);
  border-radius: var(--radius-full);
}

.error-icon {
  font-size: 96rpx;
}

.error-title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  text-align: center;
}

.error-message {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  text-align: center;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: var(--space-2);
  justify-content: center;
  margin-top: var(--space-2);
}

.patient-list {
  flex: 1;
  padding: var(--space-2) var(--space-3) var(--space-5);
  box-sizing: border-box;
}

/* P1-4: 不同密度模式的卡片间距 */
.patient-card {
  margin-bottom: var(--space-3);
}

.patient-card:last-child {
  margin-bottom: 0;
}

/* compact 模式: 紧凑间距 */
.patient-item[mode="compact"] {
  margin-bottom: var(--space-2);
}

/* comfortable 模式: 舒适间距(默认) */
.patient-item[mode="comfortable"] {
  margin-bottom: var(--space-3);
}

/* spacious 模式: 宽松间距 */
.patient-item[mode="spacious"] {
  margin-bottom: var(--space-4);
}

.patient-card-body {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.patient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-2);
}

.patient-name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-count-badge.pm-badge {
  font-size: var(--text-sm);
}

.quick-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(0, 1fr));
  gap: var(--space-2);
}

.quick-item {
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
  padding: var(--space-3);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.quick-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.quick-value {
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  color: var(--color-text-primary);
}

.patient-meta {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.meta-row {
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
}

.meta-label {
  width: 160rpx;
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.meta-value {
  flex: 1;
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  word-break: break-word;
}

.toolbar {
  padding: 0 var(--space-3) var(--space-2);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.toolbar-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: var(--space-3);
}

.sort-picker-wrapper {
  min-width: 220rpx;
}

.sort-picker {
  display: flex;
  align-items: center;
  gap: var(--space-1);
  padding: var(--space-2) var(--space-3);
  background: var(--color-bg-primary);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  box-shadow: var(--shadow-sm);
}

.sort-icon {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
}

.toolbar-actions {
  display: flex;
  gap: var(--space-2);
  margin-left: auto;
}

.toolbar-action.pm-button {
  min-width: 0;
  padding: var(--space-2) var(--space-4);
  box-shadow: var(--shadow-sm);
}

.toolbar-action.pm-button .pm-button__text {
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
}

/* P1-4: 密度切换按钮样式 */
.density-toggle.pm-button {
  width: 64rpx;
  height: 64rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-base);
  transition: all 0.2s ease;
}

.density-toggle.pm-button .pm-button__icon {
  font-size: var(--text-lg);
}

.empty-state-card {
  margin: var(--space-8) var(--space-4);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-6) var(--space-4);
}

/* P1-9: 智能空状态样式优化 */
.empty-illustration-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-full);
}

.empty-icon {
  font-size: 96rpx;
}

.empty-illustration {
  width: 320rpx;
  height: 240rpx;
  opacity: 0.8;
}

.empty-description {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  text-align: center;
}

.empty-actions {
  display: flex;
  justify-content: center;
  padding-top: var(--space-2);
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  padding: var(--space-2) var(--space-3);
}

.skeleton-item {
  display: flex;
  gap: var(--space-3);
  padding: var(--space-4);
  border-radius: var(--radius-md);
  background: var(--color-bg-primary);
  box-shadow: var(--shadow-sm);
}

.skeleton-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-line {
  height: 24rpx;
  border-radius: var(--radius-sm);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-line--title {
  width: 40%;
  height: 32rpx;
}

.skeleton-badges {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-1);
}

.skeleton-badge {
  width: 120rpx;
  height: 32rpx;
  border-radius: var(--radius-base);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-grid {
  display: flex;
  gap: var(--space-2);
}

.skeleton-chip {
  flex: 1;
  height: 48rpx;
  border-radius: var(--radius-md);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* P1-7: FAB标签提示容器 */
.fab-container {
  position: fixed;
  right: var(--space-4);
  bottom: var(--space-8);
  z-index: 120;
  transform: translateY(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

/* P1-6: FAB隐藏状态 */
.fab-container--hidden {
  transform: translateY(200rpx);
}

/* P1-7: FAB标签提示 */
.fab-label {
  padding: var(--space-2) var(--space-3);
  background: var(--color-text-primary);
  color: var(--color-bg-primary);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  white-space: nowrap;
  box-shadow: var(--shadow-md);
  animation: fab-label-enter 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes fab-label-enter {
  0% {
    opacity: 0;
    transform: translateX(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.fab-button {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-floating);
  background: var(--color-bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-button:active {
  transform: scale(0.92);
  box-shadow: var(--shadow-lg);
}

.fab-button .pm-button {
  width: 100%;
  height: 100%;
  min-height: 112rpx;
  border-radius: var(--radius-full);
  box-shadow: none;
}

.fab-button .pm-button__content {
  gap: 0;
}

.fab-button .pm-button__icon {
  font-size: var(--text-xl);
  margin: 0;
}

.checkout-dialog__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  padding-top: var(--space-1);
}

.checkout-dialog__summary {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.checkout-dialog__name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.checkout-dialog__desc {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.checkout-dialog__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  padding-top: var(--space-3);
}
