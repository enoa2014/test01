.container {
  padding: 48rpx;
}

.hero {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #3f4c5c;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 40rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.card-item + .card-item {
  margin-top: 20rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
}

.item-desc {
  display: block;
  margin-top: 8rpx;
  color: #5f6c80;
  font-size: 24rpx;
}

.primary {
  width: 100%;
  padding: 28rpx 0;
  font-size: 30rpx;
  margin-bottom: 36rpx;
}

.result {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.05);
}

.result-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.result-body {
  font-size: 24rpx;
  color: #334155;
  word-break: break-all;
}