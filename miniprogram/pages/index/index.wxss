.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--color-bg-secondary);
}

.hero {
  padding: var(--space-8) var(--space-5) var(--space-4);
  background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
}

.hero-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-3);
  flex-wrap: wrap;
}

.title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.title::before {
  content: '●';
  color: var(--color-primary);
  font-size: var(--text-base);
}

.hero-subtitle {
  margin-top: var(--space-1);
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.theme-picker {
  min-width: 200rpx;
  display: inline-block;
}

.theme-select {
  display: flex;
  align-items: center;
  gap: var(--space-1);
  border: 2rpx solid var(--color-border-secondary);
  background-color: var(--color-bg-primary);
  color: var(--color-text-secondary);
  border-radius: var(--radius-full);
  padding: 0 var(--space-3);
  height: 60rpx;
  line-height: 60rpx;
  font-size: var(--text-sm);
}

.theme-select__label {
  white-space: nowrap;
}

.theme-select__icon {
  font-size: var(--text-sm);
}

.placeholder,
.error {
  padding: var(--space-5);
  text-align: center;
  color: var(--color-text-secondary);
}

/* P2-7: 增强错误状态UI */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-8) var(--space-4);
  margin: var(--space-8) var(--space-4);
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.error-illustration {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: var(--color-danger-light, #fff1f0);
  border-radius: var(--radius-full);
}

.error-icon {
  font-size: 96rpx;
}

.error-title {
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  text-align: center;
}

.error-message {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  text-align: center;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: var(--space-2);
  justify-content: center;
  margin-top: var(--space-2);
}

.patient-list {
  flex: 1;
  padding: var(--space-2) var(--space-3) var(--space-5);
  box-sizing: border-box;
}

/* P1-4: 不同密度模式的卡片间距 */
.patient-card {
  margin-bottom: var(--space-3);
}

.patient-card:last-child {
  margin-bottom: 0;
}

/* compact 模式: 紧凑间距 */
.patient-item--compact {
  margin-bottom: var(--space-2);
}

/* comfortable 模式: 舒适间距(默认) */
.patient-item--comfortable {
  margin-bottom: var(--space-3);
}

/* spacious 模式: 宽松间距 */
.patient-item--spacious {
  margin-bottom: var(--space-4);
}

.patient-card-body {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.patient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--space-2);
}

.patient-name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.patient-count-badge.pm-badge {
  font-size: var(--text-sm);
}

.quick-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(0, 1fr));
  gap: var(--space-2);
}

.quick-item {
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
  padding: var(--space-3);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.quick-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.quick-value {
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  color: var(--color-text-primary);
}

.patient-meta {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.meta-row {
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
}

.meta-label {
  width: 160rpx;
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.meta-value {
  flex: 1;
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  word-break: break-word;
}

/* 统计卡片区域 */
.stats-section {
  padding: 0 var(--space-4) var(--space-3);
  margin-top: calc(var(--space-3) * -1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-2);
}

.stat-card {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-4) var(--space-3);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  cursor: pointer;
}

.stat-card:active {
  transform: scale(0.96);
  box-shadow: var(--shadow-xs);
}

.stat-card--active {
  box-shadow: 0 0 0 2px var(--color-primary);
  background: var(--color-primary-light, rgba(99, 102, 241, 0.08));
}

.stat-card--all.stat-card--active {
  background: rgba(99, 102, 241, 0.08);
}

.stat-card--in-care.stat-card--active {
  background: rgba(34, 197, 94, 0.08);
  box-shadow: 0 0 0 2px rgba(34, 197, 94, 0.6);
}

.stat-card--pending.stat-card--active {
  background: rgba(251, 191, 36, 0.08);
  box-shadow: 0 0 0 2px rgba(251, 191, 36, 0.6);
}

.stat-card--discharged.stat-card--active {
  background: rgba(148, 163, 184, 0.08);
  box-shadow: 0 0 0 2px rgba(148, 163, 184, 0.6);
}

.stat-value {
  font-size: var(--text-2xl, 48rpx);
  font-weight: var(--font-bold);
  color: var(--color-text-primary);
  line-height: 1;
}

.stat-card--in-care .stat-value {
  color: var(--color-success, #22c55e);
}

.stat-card--pending .stat-value {
  color: var(--color-warning, #fbbf24);
}

.stat-label {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  font-weight: var(--font-medium);
}

.toolbar {
  padding: 0 var(--space-3) var(--space-2);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  position: sticky;
  top: 0;
  z-index: 10;
  background: var(--color-bg-secondary);
  padding-top: var(--space-3);
  padding-bottom: var(--space-2);
  margin-top: var(--space-2);
}

/* 搜索栏增强 */
.toolbar smart-search-bar {
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--space-3);
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.08),
    0 1px 2px rgba(0, 0, 0, 0.06);
}

.toolbar-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-3);
}

.sort-picker-wrapper {
  flex-shrink: 0;
}

.sort-picker {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-4);
  background: var(--color-bg-primary);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  color: var(--color-text-primary);
  box-shadow: var(--shadow-sm);
  min-width: 200rpx;
  transition: box-shadow 0.2s ease;
}

.sort-picker:active {
  box-shadow: var(--shadow-md);
}

.sort-icon {
  font-size: var(--text-base);
  color: var(--color-text-secondary);
  margin-left: auto;
}

.toolbar-actions {
  display: flex;
  gap: var(--space-2);
  align-items: center;
}

.toolbar-action.pm-button {
  min-width: 0;
  min-height: 88rpx;
  padding: var(--space-2) var(--space-4);
  box-shadow: var(--shadow-sm);
}

.toolbar-action.pm-button .pm-button__text {
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
}

/* 统计卡片触摸优化 */
.stat-card {
  min-height: 120rpx;
}

/* 多选模式按钮：强调可点击面积 */
.batch-toggle.pm-button {
  min-width: 132rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-lg);
  padding: 0 var(--space-4);
  transition: all 0.2s ease;
}

.batch-toggle.pm-button .pm-button__icon {
  font-size: var(--text-base);
}

.empty-state-card {
  margin: var(--space-8) var(--space-4);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-6) var(--space-4);
}

/* P1-9: 智能空状态样式优化 */
.empty-illustration-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background: var(--color-bg-tertiary);
  border-radius: var(--radius-full);
}

.empty-icon {
  font-size: 96rpx;
}

.empty-illustration {
  width: 320rpx;
  height: 240rpx;
  opacity: 0.8;
}

.empty-description {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  text-align: center;
}

.empty-actions {
  display: flex;
  justify-content: center;
  padding-top: var(--space-2);
}

.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  padding: var(--space-2) var(--space-3);
}

.skeleton-item {
  display: flex;
  gap: var(--space-3);
  padding: var(--space-4);
  border-radius: var(--radius-md);
  background: var(--color-bg-primary);
  box-shadow: var(--shadow-sm);
}

.skeleton-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton-line {
  height: 24rpx;
  border-radius: var(--radius-sm);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-line--title {
  width: 40%;
  height: 32rpx;
}

.skeleton-badges {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-1);
}

.skeleton-badge {
  width: 120rpx;
  height: 32rpx;
  border-radius: var(--radius-base);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

.skeleton-grid {
  display: flex;
  gap: var(--space-2);
}

.skeleton-chip {
  flex: 1;
  height: 48rpx;
  border-radius: var(--radius-md);
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 25%,
    var(--color-bg-secondary) 50%,
    var(--color-bg-tertiary) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.4s infinite ease;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* P1-7: FAB标签提示容器 */
.fab-container {
  position: fixed;
  right: var(--space-4);
  bottom: var(--space-8);
  z-index: 120;
  transform: translateY(0);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

/* P1-6: FAB隐藏状态 */
.fab-container--hidden {
  transform: translateY(200rpx);
}

/* P1-7: FAB标签提示 */
.fab-label {
  padding: var(--space-2) var(--space-3);
  background: var(--color-text-primary);
  color: var(--color-bg-primary);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  white-space: nowrap;
  box-shadow: var(--shadow-md);
  animation: fab-label-enter 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-label--hint {
  background: var(--color-text-secondary);
  color: var(--color-bg-primary);
}

@keyframes fab-label-enter {
  0% {
    opacity: 0;
    transform: translateX(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.fab-button {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-floating);
  background: var(--color-bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-button:active {
  transform: scale(0.92);
  box-shadow: var(--shadow-lg);
}

.fab-button--hover {
  transform: scale(0.94) !important;
  box-shadow: var(--shadow-lg) !important;
}

.fab-button .pm-button {
  width: 100%;
  height: 100%;
  min-height: 112rpx;
  border-radius: var(--radius-full);
  box-shadow: none;
}

.fab-button--disabled {
  box-shadow: var(--shadow-sm);
  background: var(--color-bg-tertiary);
}

.fab-container--disabled .pm-button {
  opacity: 0.6;
}

.fab-container--disabled .pm-button__icon {
  color: var(--color-text-secondary);
}

.fab-container--disabled .fab-button:active {
  transform: none;
  box-shadow: var(--shadow-sm);
}

.fab-button .pm-button__content {
  gap: 0;
}

.fab-button .pm-button__icon {
  font-size: var(--text-xl);
  margin: 0;
}

.checkout-dialog__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  padding-top: var(--space-1);
}

.checkout-dialog__summary {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.checkout-dialog__datetime {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.checkout-dialog__field-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.checkout-dialog__datetime-row {
  display: flex;
  gap: var(--space-2);
}

.checkout-dialog__picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-md);
  border: 1px solid var(--color-border-subtle);
  font-size: var(--text-base);
  color: var(--color-text-primary);
  background: var(--color-surface-elevated);
}

.checkout-dialog__datetime-hint {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.checkout-dialog__name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.checkout-dialog__desc {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.checkout-dialog__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  padding-top: var(--space-3);
}

.status-dialog__body {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  padding-top: var(--space-1);
}

.status-dialog__summary {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.status-dialog__name {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.status-dialog__desc {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  line-height: 1.5;
}

.status-dialog__options {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.status-dialog__option {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border-subtle);
  background: var(--color-surface-elevated);
  transition:
    border-color 0.2s ease,
    background-color 0.2s ease;
}

.status-dialog__option--active {
  border-color: var(--color-primary);
  background: var(--color-primary-subtle);
}

.status-dialog__option-main {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.status-dialog__option-radio {
  font-size: var(--text-lg);
  color: var(--color-primary);
}

.status-dialog__option-label {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}

.status-dialog__option-tip {
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.status-dialog__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
  padding-top: var(--space-3);
}
