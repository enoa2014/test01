.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.hero {
  margin-bottom: 32rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #4b5563;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.primary,
.secondary {
  flex: 1;
}

.secondary {
  background-color: #2563eb;
  color: #ffffff;
}

.placeholder,
.error,
.status {
  text-align: center;
  padding: 24rpx 0;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.status {
  color: #2563eb;
  font-size: 26rpx;
}

.table-container {
  max-height: 70vh;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  background: #ffffff;
}

.table {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  border-bottom: 1px solid #f1f5f9;
}

.row:last-child {
  border-bottom: none;
}

.header {
  background: #f8fafc;
  position: sticky;
  top: 0;
  z-index: 1;
}

.cell {
  flex: 1;
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  color: #111827;
  border-right: 1px solid #f1f5f9;
  word-break: break-word;
}

.cell:last-child {
  border-right: none;
}
