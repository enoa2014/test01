.analysis-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f5f5f5;
}

.placeholder,
.error {
  padding: 48rpx;
  text-align: center;
  color: #6b7280;
}

.error {
  color: #dc2626;
}

.panel-container {
  flex: 1;
  padding: 12rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.analysis-panel {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.05);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.panel-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.panel-placeholder {
  padding: 16rpx 0;
  color: #9ca3af;
  font-size: 26rpx;
}

.stat-scroll {
  white-space: nowrap;
}

.stat-card {
  display: inline-flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 240rpx;
  padding: 20rpx 24rpx;
  margin-right: 20rpx;
  background: linear-gradient(180deg, #f9fafb, #ffffff);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 18rpx rgba(15, 23, 42, 0.08);
}

.stat-card:active {
  transform: scale(0.98);
  opacity: 0.92;
}

.stat-label {
  font-size: 26rpx;
  color: #4b5563;
}

.stat-count {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.stat-samples {
  font-size: 24rpx;
  color: #6b7280;
}

.selection-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(17, 24, 39, 0.45);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

.selection-panel {
  width: 100%;
  max-height: 70vh;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.selection-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.selection-list {
  flex: 1;
}

.selection-item {
  padding: 20rpx 16rpx;
  border-bottom: 1px solid #e5e7eb;
  font-size: 28rpx;
  color: #1f2937;
}

.selection-item:active {
  background: #f3f4f6;
}

.selection-close {
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #2563eb;
}
