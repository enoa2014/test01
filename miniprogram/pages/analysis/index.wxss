.analysis-container {
  min-height: 100vh;
}

.placeholder,
.error {
  padding: var(--space-6);
  text-align: center;
  color: var(--color-text-secondary);
}

.error {
  color: var(--color-danger);
}

.panel-container {
  flex: 1;
  padding: var(--space-2) var(--space-3) var(--space-5);
  box-sizing: border-box;
}

.analysis-panel {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.panel-title {
  font-size: var(--text-md);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.panel-placeholder {
  padding: var(--space-2) 0;
  color: var(--color-text-tertiary);
  font-size: var(--text-sm);
}

.stat-scroll {
  white-space: nowrap;
}

.analysis-stat-card {
  display: inline-flex;
  min-width: 240rpx;
  margin-right: var(--space-3);
  transition: transform 0.2s ease;
}

.analysis-stat-card:last-child {
  margin-right: 0;
}

.analysis-stat-card__content {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.analysis-stat-card__label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.analysis-stat-card__count {
  display: flex;
  align-items: baseline;
  gap: var(--space-1);
  color: var(--color-text-primary);
}

.analysis-stat-card__figure {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
}

.analysis-stat-card__unit {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.analysis-stat-card__samples {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.selection-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--overlay-dim);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: var(--space-5) var(--space-4);
  box-sizing: border-box;
}

.selection-panel {
  width: 100%;
  max-height: 70vh;
  background: var(--color-bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  box-shadow: var(--shadow-md);
}

.selection-title {
  font-size: var(--text-md);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
}

.selection-list {
  flex: 1;
}

.selection-item {
  padding: var(--space-3) var(--space-2);
  border-bottom: 2rpx solid var(--color-border-secondary);
  font-size: var(--text-base);
  color: var(--color-text-primary);
}

.selection-item:active {
  background: var(--color-bg-tertiary);
}

.selection-close {
  text-align: center;
  padding: var(--space-3) 0;
  font-size: var(--text-base);
  color: var(--color-info);
}
