/* pages/auth/welcome/index.wxss */

.welcome-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx 40rpx;
  color: white;
  position: relative;
}

/* 头部区域 */
.welcome-header {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeInDown 0.8s ease-out;
}

.welcome-logo {
  margin-bottom: 30rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
  letter-spacing: 1rpx;
}

/* 内容区域 */
.welcome-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 通用区块样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 3rpx;
}

/* 功能介绍区块 */
.feature-section {
  animation: fadeInLeft 0.8s ease-out 0.2s both;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin-right: 20rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
  line-height: 1.4;
}

/* 用户指南区块 */
.guide-section {
  animation: fadeInRight 0.8s ease-out 0.4s both;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.4;
}

/* 权限说明区块 */
.permission-section {
  animation: fadeInUp 0.8s ease-out 0.6s both;
}

.permission-content {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  text-align: center;
}

.permission-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.permission-link {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: none;
  color: white;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.permission-link:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 操作按钮区域 */
.welcome-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-group {
  display: flex;
  gap: 20rpx;
}

.action-group.primary {
  justify-content: center;
}

.action-group.secondary {
  justify-content: space-between;
}

.action-group.tertiary {
  justify-content: center;
}

.action-group.skip {
  justify-content: center;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active::before {
  background: rgba(255, 255, 255, 0.2);
}

/* 主要按钮 */
.action-btn.primary {
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
  min-width: 240rpx;
}

.action-btn.primary:active {
  transform: scale(0.98);
}

/* 次要按钮 */
.action-btn.secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  flex: 1;
  backdrop-filter: blur(10rpx);
}

.action-btn.secondary:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 文字按钮 */
.action-btn.text {
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  padding: 16rpx 24rpx;
  font-size: 26rpx;
}

.action-btn.text:active {
  color: white;
  background: rgba(255, 255, 255, 0.1);
}

.action-btn.skip {
  color: rgba(255, 255, 255, 0.6);
}

.action-btn.skip:active {
  color: rgba(255, 255, 255, 0.8);
}

/* 底部信息 */
.welcome-footer {
  text-align: center;
  animation: fadeIn 1s ease-out 0.8s both;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
  margin-bottom: 8rpx;
}

.footer-copyright {
  display: block;
  font-size: 22rpx;
  opacity: 0.5;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.loading-image {
  width: 80rpx;
  height: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 动画效果 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateX(40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 响应式适配 */
@media (max-width: 480px) {
  .welcome-container {
    padding: 40rpx 30rpx 30rpx;
  }

  .welcome-title {
    font-size: 40rpx;
  }

  .welcome-subtitle {
    font-size: 24rpx;
  }

  .section-title {
    font-size: 28rpx;
  }

  .feature-item {
    padding: 16rpx;
  }

  .step-item {
    padding: 12rpx 16rpx;
  }

  .action-btn {
    font-size: 26rpx;
    padding: 20rpx 24rpx;
  }

  .action-group.secondary {
    flex-direction: column;
    gap: 16rpx;
  }

  .action-btn.secondary {
    width: 100%;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .welcome-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }

  .loading-content {
    background: rgba(30, 30, 30, 0.9);
  }

  .loading-text {
    color: #fff;
  }
}