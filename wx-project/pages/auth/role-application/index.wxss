/* pages/auth/role-application/index.wxss */

.role-application {
  min-height: 100vh;
  background-color: var(--bg-color-page);
  padding-bottom: 120rpx;
}

/* È°µÈù¢Â§¥ÈÉ® */
.page-header {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.header-content {
  text-align: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* Áî≥ËØ∑Ë°®Âçï */
.application-form {
  margin: 40rpx 30rpx;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.title-required {
  color: var(--color-danger);
  margin-left: 8rpx;
  font-size: 28rpx;
}

.title-hint {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-left: 16rpx;
  flex: 1;
}

/* ËßíËâ≤ÈÄâÊã© */
.role-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.role-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.role-option--selected {
  border-color: var(--color-primary);
  background-color: var(--color-primary-light);
}

.role-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: var(--color-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 36rpx;
  color: white;
}

.role-option--selected .role-icon {
  background-color: var(--color-primary);
}

.role-info {
  flex: 1;
}

.role-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  display: block;
  line-height: 1.4;
}

.role-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.role-option--selected .role-check {
  border-color: var(--color-primary);
  background-color: var(--color-primary);
}

.icon-check {
  color: white;
  font-size: 24rpx;
}

/* Áî≥ËØ∑ÁêÜÁî± */
.reason-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.5;
  color: var(--color-text-primary);
  background-color: var(--bg-color-input);
}

.reason-input:focus {
  border-color: var(--color-primary);
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 16rpx;
}

/* ÈôÑ‰ª∂‰∏ä‰º† */
.attachment-area {
  border: 2rpx dashed var(--border-color);
  border-radius: 12rpx;
  padding: 30rpx;
  background-color: var(--bg-color-input);
}

.attachment-list {
  margin-bottom: 20rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  font-size: 28rpx;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.attachment-size {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.attachment-remove {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--color-danger-light);
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-close {
  color: var(--color-danger);
  font-size: 24rpx;
}

.upload-btn {
  text-align: center;
  padding: 40rpx;
  border: 2rpx dashed var(--color-primary);
  border-radius: 12rpx;
  background-color: var(--color-primary-light);
}

.icon-upload {
  font-size: 48rpx;
  color: var(--color-primary);
  display: block;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 30rpx;
  color: var(--color-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* ËÅîÁ≥ªÊñπÂºè */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
}

.contact-label {
  width: 120rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  margin-right: 30rpx;
}

.contact-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  background-color: var(--bg-color-input);
}

.contact-input:focus {
  border-color: var(--color-primary);
}

/* Áî≥ËØ∑È°ªÁü• */
.application-notice {
  margin: 40rpx 30rpx;
  background-color: var(--color-warning-light);
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 8rpx solid var(--color-warning);
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-warning);
  margin-bottom: 20rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-item {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
}

/* Êèê‰∫§ÊåâÈíÆ */
.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  border-top: 2rpx solid var(--border-color);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
  border-radius: 44rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn--disabled {
  background: var(--color-disabled);
  color: var(--color-text-disabled);
}

/* ÂéÜÂè≤Áî≥ËØ∑ËÆ∞ÂΩï */
.history-section {
  margin: 40rpx 30rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
}

.history-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-role {
  font-size: 30rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.history-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.history-status--pending {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.history-status--approved {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.history-status--rejected {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

