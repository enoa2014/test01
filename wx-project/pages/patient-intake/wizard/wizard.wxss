/* 患者录入向导样式（令牌化） */

.wizard-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--color-bg-secondary);
  box-sizing: border-box;
}

/* 进度指示器 */
.progress-header {
  background-color: var(--color-bg-primary);
  padding: var(--space-3);
  border-bottom: 2rpx solid var(--color-border-secondary);
  box-sizing: border-box;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-3);
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  padding: 0 var(--space-1);
}

.step-item::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 50%;
  right: -50%;
  height: 2rpx;
  background-color: var(--color-border-secondary);
  z-index: 1;
}

.step-item:last-child::after {
  display: none;
}

.step-item.active::after,
.step-item.completed::after {
  background-color: var(--color-success);
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  color: var(--color-text-secondary);
  background-color: var(--color-bg-tertiary);
  position: relative;
  z-index: 2;
}

.step-item.active .step-number,
.step-item.completed .step-number {
  color: var(--color-bg-primary);
  background-color: var(--color-success);
}

.step-label {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  margin-top: var(--space-1);
  text-align: center;
  line-height: 1.2;
}

.step-item.active .step-label {
  color: var(--color-success);
  font-weight: var(--font-semibold);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.required-count {
  color: var(--color-danger);
}

/* 步骤标题 */
.step-header {
  background-color: var(--color-bg-primary);
  padding: var(--space-4) var(--space-5);
  border-bottom: 2rpx solid var(--color-border-secondary);
  box-sizing: border-box;
}

.step-title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-1);
}

.required-fields {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.required-label {
  color: var(--color-danger);
}

.required-list {
  color: var(--color-text-primary);
}

/* 步骤内容 */
.step-content {
  flex: 1;
  padding: 0 var(--space-5) var(--space-5);
  box-sizing: border-box;
}

.form-section {
  padding-top: var(--space-5);
}

/* 表单组件 */
.form-group {
  margin-bottom: var(--space-5);
}

.medical-group .group-title {
  color: var(--color-text-primary);
  margin-bottom: var(--space-3);
}

.medical-group pm-input {
  margin-bottom: var(--space-3);
}

.medical-group pm-input:last-child {
  margin-bottom: 0;
}

/* 已移除多联系人编辑 UI（contacts-section/contact-item 等） */

.form-label {
  display: block;
  font-size: var(--text-base);
  color: var(--color-text-primary);
  margin-bottom: var(--space-2);
  font-weight: var(--font-medium);
}

.form-label.required::after {
  content: '*';
  color: var(--color-danger);
  margin-left: var(--space-1);
}

.form-picker,
.form-textarea {
  width: 100%;
  border: 2rpx solid var(--color-border-secondary);
  border-radius: var(--radius-sm);
  background-color: var(--color-bg-primary);
  box-sizing: border-box;
  font-size: var(--text-base);
  color: var(--color-text-primary);
}

.form-picker {
  min-height: 80rpx;
  padding: 0 var(--space-3);
  display: flex;
  align-items: center;
}

.form-textarea {
  min-height: 120rpx;
  padding: var(--space-2) var(--space-3);
  line-height: 1.5;
}

.form-textarea.large {
  min-height: 200rpx;
}

.form-picker.error,
.form-textarea.error {
  border-color: var(--color-danger);
}

.picker-display {
  flex: 1;
  font-size: var(--text-base);
  color: var(--color-text-primary);
}

.textarea-container {
  position: relative;
}

.char-count {
  position: absolute;
  bottom: var(--space-2);
  right: var(--space-3);
  font-size: var(--text-xs);
  color: var(--color-text-tertiary);
}

.min-hint {
  color: var(--color-success);
}

.radio-group {
  display: flex;
  gap: var(--space-5);
}

.radio-item {
  font-size: var(--text-base);
}

.hint-text {
  font-size: var(--text-sm);
  color: var(--color-text-tertiary);
  margin-top: var(--space-1);
  display: block;
}

.error-text {
  font-size: var(--text-sm);
  color: var(--color-danger);
  margin-top: var(--space-1);
  display: block;
}

.hint-section {
  margin-top: var(--space-3);
  padding: var(--space-3);
  background-color: var(--bg-info-soft);
  border-radius: var(--radius-md);
  border-left: 4rpx solid var(--color-info);
}

.hint-title {
  font-size: var(--text-sm);
  color: var(--color-info);
  margin-bottom: var(--space-1);
  font-weight: var(--font-semibold);
}

.example-text {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  line-height: 1.4;
}

/* 核对页面 */
.review-section {
  background-color: var(--color-bg-primary);
  padding: var(--space-4);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.review-title {
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--space-4);
  text-align: center;
}

.review-group {
  margin-bottom: var(--space-5);
  padding-bottom: var(--space-4);
  border-bottom: 2rpx solid var(--color-border-secondary);
}

.review-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.group-title {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--color-success);
  margin-bottom: var(--space-2);
}

.review-item {
  display: flex;
  margin-bottom: var(--space-2);
  align-items: flex-start;
}

.item-label {
  font-size: var(--text-base);
  color: var(--color-text-secondary);
  min-width: 120rpx;
  flex-shrink: 0;
}

.item-value {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  flex: 1;
  line-height: 1.4;
}

.item-value.situation {
  background-color: var(--color-bg-tertiary);
  padding: var(--space-2);
  border-radius: var(--radius-md);
  margin-top: calc(-1 * var(--space-1));
}

.completion-status {
  margin-top: var(--space-4);
  padding: var(--space-3);
  background-color: var(--bg-info-soft);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.status-item.incomplete {
  color: var(--color-danger);
}

.status-item.completed {
  color: var(--color-success);
}

.status-icon {
  font-size: var(--text-base);
}

.status-text {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
}

/* 底部操作区 */
.action-bar {
  background-color: var(--color-bg-primary);
  padding: var(--space-4) var(--space-5);
  border-top: 2rpx solid var(--color-border-secondary);
  box-sizing: border-box;
}

.action-buttons {
  display: flex;
  gap: var(--space-3);
}

.action-buttons .pm-button {
  flex: 1;
  min-height: 80rpx;
}

/* 步骤介绍样式 */
.step-intro {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-4);
  background-color: var(--bg-info-soft);
  border-radius: var(--radius-md);
  border-left: 4rpx solid var(--color-info);
  margin-bottom: var(--space-5);
}

.intro-icon {
  font-size: 40rpx;
}

.intro-text {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  line-height: 1.4;
}

/* 锁定字段样式 */
.field-locked {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-3);
  background-color: var(--color-bg-tertiary);
  border-radius: var(--radius-md);
  border: 2rpx solid var(--color-border-secondary);
}

.locked-value {
  flex: 1;
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.value-text {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  font-weight: var(--font-medium);
}

.auto-fill-badge {
  font-size: var(--text-xs);
  color: var(--color-success);
  background-color: var(--bg-success-soft);
  padding: 2rpx var(--space-2);
  border-radius: var(--radius-sm);
  border: 1rpx solid var(--color-success);
}

.unlock-btn {
  font-size: var(--text-sm);
  color: var(--color-primary);
  padding: var(--space-1) var(--space-3);
  border: 1rpx solid var(--color-primary);
  border-radius: var(--radius-sm);
  background-color: transparent;
  line-height: 1.2;
}

/* 自动填充提示 Toast */
.auto-fill-toast {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--color-bg-primary);
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  gap: var(--space-2);
  z-index: 999;
  animation: fadeInOut 3s ease-in-out;
}

.auto-fill-toast text {
  font-size: var(--text-base);
  color: var(--color-text-primary);
}

@keyframes fadeInOut {
  0% { opacity: 0; transform: translateX(-50%) translateY(-20rpx); }
  10% { opacity: 1; transform: translateX(-50%) translateY(0); }
  90% { opacity: 1; transform: translateX(-50%) translateY(0); }
  100% { opacity: 0; transform: translateX(-50%) translateY(-20rpx); }
}
