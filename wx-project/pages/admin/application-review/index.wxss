/* pages/admin/application-review/index.wxss */

.admin-review {
  min-height: 100vh;
  background-color: var(--bg-color-page);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, var(--color-info) 0%, var(--color-info-light) 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.header-content {
  text-align: center;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.header-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

/* 筛选器 */
.filter-section {
  background: white;
  margin: -10rpx 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.filter-tabs {
  display: flex;
  margin-bottom: 30rpx;
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  transition: all 0.3s ease;
}

.filter-tab--active {
  background-color: var(--color-info);
  color: white;
  font-weight: 600;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  transition: border-color 0.3s ease;
}

.search-input-wrapper:focus-within {
  border-color: var(--color-info);
}

.search-icon {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.clear-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--color-disabled);
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.clear-icon.hidden {
  opacity: 0;
  pointer-events: none;
}

.filter-controls {
  display: flex;
  gap: 30rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 26rpx;
  color: var(--color-text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.filter-picker {
  width: 100%;
}

.picker-display {
  padding: 20rpx 24rpx;
  background-color: var(--bg-color-input);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
  transition: border-color 0.3s ease;
}

.picker-display:focus {
  border-color: var(--color-info);
}

/* 批量操作 */
.batch-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid var(--border-color);
}

.batch-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.batch-btn--approve {
  background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
  color: white;
}

.batch-btn--reject {
  background: linear-gradient(135deg, var(--color-warning) 0%, var(--color-warning-light) 100%);
  color: white;
}

/* 申请列表 */
.application-list {
  margin: 0 30rpx;
}

.application-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.application-item:active {
  transform: scale(0.98);
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.applicant-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.applicant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.applicant-details {
  flex: 1;
}

.applicant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.applicant-contact {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
  margin-bottom: 4rpx;
}

.apply-time {
  font-size: 22rpx;
  color: var(--color-text-disabled);
  display: block;
}

.application-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-badge--pending {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.status-badge--approved {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.status-badge--rejected {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.item-content {
  margin-bottom: 20rpx;
}

.role-info,
.reason-preview,
.attachment-preview,
.review-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.role-label,
.reason-label,
.attachment-label,
.review-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  width: 160rpx;
  flex-shrink: 0;
}

.reason-text {
  font-size: 26rpx;
  color: var(--color-text-primary);
  flex: 1;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.attachment-count {
  font-size: 26rpx;
  color: var(--color-info);
  font-weight: 500;
}

.review-time,
.reviewer {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-left: 16rpx;
}

.item-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  min-width: 140rpx;
}

.action-btn--approve {
  background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
  color: white;
}

.action-btn--reject {
  background: linear-gradient(135deg, var(--color-danger) 0%, var(--color-danger-light) 100%);
  color: white;
}

.action-btn--detail {
  background-color: var(--bg-color-input);
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-info);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 底部统计 */
.bottom-stats {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  border-top: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stats-text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.stats-divider {
  font-size: 24rpx;
  color: var(--color-text-disabled);
}

/* 弹窗样式 */
.detail-modal,
.reason-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1001;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-text-secondary);
  border-radius: 50%;
  background-color: var(--bg-color-input);
}

.modal-body {
  padding: 30rpx 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 详情样式 */
.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
  display: block;
}

.applicant-detail {
  display: flex;
  align-items: flex-start;
}

.detail-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid var(--color-info);
}

.detail-info {
  flex: 1;
}

.detail-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 12rpx;
}

.detail-contact {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.detail-time {
  font-size: 24rpx;
  color: var(--color-text-disabled);
  display: block;
}

.role-detail {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.role-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.5;
  flex: 1;
}

.reason-detail {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.6;
  background-color: var(--bg-color-input);
  padding: 20rpx;
  border-radius: 12rpx;
}

.attachments-detail {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: var(--bg-color-input);
  border-radius: 8rpx;
}

.attachment-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.attachment-name {
  font-size: 26rpx;
  color: var(--color-text-primary);
  flex: 1;
}

.attachment-size {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-left: 16rpx;
}

.review-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.review-status {
  align-self: flex-start;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.reviewer-info,
.review-time-info {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.review-reason {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.6;
  padding: 20rpx;
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--color-info);
}

/* 理由输入 */
.reason-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: var(--color-text-primary);
  background-color: var(--bg-color-input);
}

.reason-input:focus {
  border-color: var(--color-info);
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 16rpx;
  display: block;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 30rpx;
  border-top: 2rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn--approve {
  background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
  color: white;
}

.modal-btn--reject {
  background: linear-gradient(135deg, var(--color-danger) 0%, var(--color-danger-light) 100%);
  color: white;
}

.modal-btn--confirm {
  background: linear-gradient(135deg, var(--color-info) 0%, var(--color-info-light) 100%);
  color: white;
}

.modal-btn--confirm[disabled] {
  background: var(--color-disabled);
  color: var(--color-text-disabled);
}

.modal-btn--cancel,
.modal-btn--close {
  background-color: var(--bg-color-input);
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
}