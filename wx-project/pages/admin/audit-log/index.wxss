/* pages/admin/audit-log/index.wxss */

.audit-log {
  min-height: 100vh;
  background-color: var(--bg-color-page);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, var(--color-danger) 0%, var(--color-danger-light) 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.header-content {
  text-align: center;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.header-actions {
  text-align: center;
}

.export-btn {
  display: inline-flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 统计卡片 */
.stats-section {
  margin: -10rpx 30rpx 20rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--color-danger);
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 筛选和搜索 */
.filter-section {
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  margin-bottom: 30rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  transition: border-color 0.3s ease;
}

.search-input-wrapper:focus-within {
  border-color: var(--color-danger);
}

.search-icon {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.clear-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--color-disabled);
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.clear-icon.hidden {
  opacity: 0;
  pointer-events: none;
}

.filter-controls {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  min-width: 200rpx;
}

.filter-label {
  font-size: 26rpx;
  color: var(--color-text-primary);
  margin-bottom: 12rpx;
  display: block;
}

.filter-picker {
  width: 100%;
}

.picker-display {
  padding: 20rpx 24rpx;
  background-color: var(--bg-color-input);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
  transition: border-color 0.3s ease;
}

.picker-display:focus {
  border-color: var(--color-danger);
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}

.action-btn--security {
  background: linear-gradient(135deg, var(--color-danger) 0%, var(--color-danger-light) 100%);
  color: white;
}

.action-btn--error {
  background: linear-gradient(135deg, var(--color-warning) 0%, var(--color-warning-light) 100%);
  color: white;
}

.action-btn--admin {
  background: linear-gradient(135deg, var(--color-info) 0%, var(--color-info-light) 100%);
  color: white;
}

.action-btn--refresh {
  background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
  color: white;
}

/* 日志列表 */
.log-list {
  margin: 0 30rpx;
}

.log-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border-left: 6rpx solid transparent;
}

.log-item--critical {
  border-left-color: var(--color-danger);
}

.log-item--high {
  border-left-color: var(--color-warning);
}

.log-item--medium {
  border-left-color: var(--color-info);
}

.log-item--low {
  border-left-color: var(--color-success);
}

.log-item:active {
  transform: scale(0.98);
}

.item-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.log-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.log-action {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  flex: 1;
}

.level-badge {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.level-badge--critical {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.level-badge--high {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.level-badge--medium {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.level-badge--low {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.log-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-info,
.log-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.log-status {
  margin-left: 20rpx;
}

.result-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.result-badge--success {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.result-badge--failure {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.result-badge--warning {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.result-badge--pending {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.item-content {
  margin-bottom: 20rpx;
}

.description-preview {
  margin-bottom: 16rpx;
}

.preview-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.5;
  display: block;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-right: 8rpx;
  min-width: 140rpx;
}

.detail-text {
  font-size: 24rpx;
  color: var(--color-text-primary);
  flex: 1;
}

.security-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.security-tag {
  padding: 6rpx 12rpx;
  background-color: var(--color-danger-light);
  color: var(--color-danger);
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn--detail {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.action-btn--trace {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.action-btn--report {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 60rpx;
  background: white;
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.6;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 120rpx 60rpx;
  background: white;
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-danger);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 底部分页 */
.bottom-pagination {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  border-top: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.pagination-info {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.pagination-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.page-btn {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  background-color: var(--color-danger-light);
  color: var(--color-danger);
  border: none;
}

.page-btn--disabled {
  background-color: var(--color-disabled);
  color: var(--color-text-disabled);
}

.page-info {
  font-size: 26rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

/* 弹窗样式 */
.detail-modal,
.trace-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1001;
}

.modal-content--large {
  max-height: 90vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-text-secondary);
  border-radius: 50%;
  background-color: var(--bg-color-input);
}

.modal-body {
  padding: 30rpx 40rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 详情样式 */
.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
  display: block;
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
}

.detail-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-right: 12rpx;
  min-width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: var(--color-text-primary);
  flex: 1;
  line-height: 1.4;
}

.content-display {
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  padding: 24rpx;
}

.content-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.6;
}

.raw-data-display {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-family: monospace;
}

.raw-data-text {
  font-size: 24rpx;
  color: var(--color-text-primary);
  line-height: 1.4;
  word-break: break-all;
}

/* 追踪信息样式 */
.trace-section {
  margin-bottom: 30rpx;
}

.trace-chain {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.trace-step {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background-color: var(--color-danger);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.step-action {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.step-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.related-logs {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.related-log {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background-color: var(--bg-color-input);
  border-radius: 8rpx;
}

.related-action {
  font-size: 26rpx;
  color: var(--color-text-primary);
}

.related-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 30rpx;
  border-top: 2rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn--trace {
  background: linear-gradient(135deg, var(--color-success) 0%, var(--color-success-light) 100%);
  color: white;
}

.modal-btn--report {
  background: linear-gradient(135deg, var(--color-warning) 0%, var(--color-warning-light) 100%);
  color: white;
}

.modal-btn--close {
  background-color: var(--bg-color-input);
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
}