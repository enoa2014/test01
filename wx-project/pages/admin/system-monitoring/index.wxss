/* pages/admin/system-monitoring/index.wxss */

.system-monitoring {
  min-height: 100vh;
  background-color: var(--bg-color-page);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.header-content {
  text-align: center;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.header-actions {
  text-align: center;
}

.refresh-btn {
  display: inline-flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 系统状态概览 */
.status-overview {
  margin: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  align-items: stretch;
}

.status-card {
  flex: 2;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid;
}

.status-card--healthy {
  border-left-color: var(--color-success);
}

.status-card--warning {
  border-left-color: var(--color-warning);
}

.status-card--critical {
  border-left-color: var(--color-danger);
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  font-size: 40rpx;
}

.status-card--healthy .status-icon {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.status-card--warning .status-icon {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.status-card--critical .status-icon {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.update-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

.quick-stats {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.quick-stat {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-primary);
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 通用章节样式 */
.section-header {
  margin: 30rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.section-subtitle {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-left: 16rpx;
}

/* 性能指标 */
.performance-section {
  margin-bottom: 30rpx;
}

.performance-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 0 30rpx;
}

.perf-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.perf-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.perf-title {
  font-size: 28rpx;
  color: var(--color-text-primary);
  font-weight: 600;
}

.perf-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.perf-chart {
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
}

.chart-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.progress-ring {
  width: 120rpx;
  height: 120rpx;
}

.progress-ring-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid var(--bg-color-input);
  border-top-color: var(--color-primary);
  transition: stroke-dasharray 0.3s ease;
}

.chart-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.network-chart {
  width: 100%;
  height: 120rpx;
}

.network-bars {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.network-bar {
  width: 40rpx;
  background: linear-gradient(to top, var(--color-primary), var(--color-primary-light));
  border-radius: 4rpx 4rpx 0 0;
  min-height: 8rpx;
}

.network-legend {
  display: flex;
  justify-content: space-around;
  font-size: 20rpx;
  color: var(--color-text-secondary);
}

.legend-item {
  display: block;
}

.perf-trend {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.perf-trend.up {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.perf-trend.down {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.perf-trend.stable {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.trend-icon {
  font-size: 20rpx;
}

/* 服务状态 */
.services-section {
  margin-bottom: 30rpx;
}

.services-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
  margin: 0 30rpx;
}

.service-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid;
}

.service-card--running {
  border-left-color: var(--color-success);
}

.service-card--stopped {
  border-left-color: var(--color-danger);
}

.service-card--warning {
  border-left-color: var(--color-warning);
}

.service-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 30rpx;
}

.service-card--running .service-icon {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.service-card--stopped .service-icon {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.service-card--warning .service-icon {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.service-info {
  flex: 1;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 4rpx;
}

.service-version {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

.service-status {
  margin-left: 16rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-badge--running {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.status-badge--stopped {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.status-badge--warning {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.status-badge--active {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.status-badge--resolved {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.status-badge--ignored {
  background-color: var(--color-disabled-light);
  color: var(--color-text-disabled);
}

.service-metrics {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-top: 2rpx solid var(--border-color);
  border-bottom: 2rpx solid var(--border-color);
}

.metric-item {
  text-align: center;
  flex: 1;
}

.metric-label {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
}

.service-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: none;
  min-width: 120rpx;
}

.action-btn--restart {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.action-btn--detail {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.action-btn--resolve {
  background-color: var(--color-success-light);
  color: var(--color-success);
}

.action-btn--ignore {
  background-color: var(--color-disabled-light);
  color: var(--color-text-disabled);
}

/* 告警信息 */
.alerts-section {
  margin-bottom: 30rpx;
}

.alert-filter {
  display: flex;
  gap: 16rpx;
}

.filter-btn {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  background-color: var(--bg-color-input);
  transition: all 0.3s ease;
}

.filter-btn.active {
  background-color: var(--color-primary);
  color: white;
}

.alerts-list {
  margin: 0 30rpx;
}

.alert-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid;
}

.alert-item--critical {
  border-left-color: var(--color-danger);
}

.alert-item--warning {
  border-left-color: var(--color-warning);
}

.alert-item--info {
  border-left-color: var(--color-info);
}

.alert-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.alert-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.alert-item--critical .alert-icon {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.alert-item--warning .alert-icon {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.alert-item--info .alert-icon {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.alert-info {
  flex: 1;
}

.alert-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.alert-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

.alert-status {
  margin-left: 16rpx;
}

.alert-content {
  margin-bottom: 16rpx;
}

.alert-description {
  font-size: 26rpx;
  color: var(--color-text-primary);
  line-height: 1.5;
}

.alert-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.empty-alerts {
  text-align: center;
  padding: 60rpx 30rpx;
  background: white;
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-primary);
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 实时日志 */
.logs-section {
  margin-bottom: 30rpx;
}

.log-controls {
  display: flex;
  gap: 16rpx;
}

.control-btn {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  background-color: var(--bg-color-input);
  transition: all 0.3s ease;
}

.control-btn.active {
  background-color: var(--color-primary);
  color: white;
}

.logs-container {
  background: #1e1e1e;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 30rpx;
  max-height: 400rpx;
  overflow-y: auto;
  font-family: monospace;
}

.log-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #333;
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  font-size: 22rpx;
  color: #888;
  margin-right: 12rpx;
  min-width: 140rpx;
  flex-shrink: 0;
}

.log-level {
  margin-right: 12rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.level-badge--critical {
  background-color: var(--color-danger-light);
  color: var(--color-danger);
}

.level-badge--warning {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
}

.level-badge--info {
  background-color: var(--color-info-light);
  color: var(--color-info);
}

.log-message {
  font-size: 24rpx;
  color: #ddd;
  line-height: 1.4;
  flex: 1;
  word-break: break-all;
}

/* 操作按钮 */
.action-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 0 30rpx 30rpx;
}

.action-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: none;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  display: block;
}

/* 弹窗样式 */
.service-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  z-index: 1001;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text-primary);
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-text-secondary);
  border-radius: 50%;
  background-color: var(--bg-color-input);
}

.modal-body {
  padding: 30rpx 40rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
}

.detail-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-right: 12rpx;
  min-width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: var(--color-text-primary);
  flex: 1;
  line-height: 1.4;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.metric-card {
  background-color: var(--bg-color-input);
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.metric-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-primary);
  display: block;
  margin-bottom: 8rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 30rpx;
  border-top: 2rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn--restart {
  background: linear-gradient(135deg, var(--color-warning) 0%, var(--color-warning-light) 100%);
  color: white;
}

.modal-btn--close {
  background-color: var(--bg-color-input);
  color: var(--color-text-primary);
  border: 2rpx solid var(--border-color);
}