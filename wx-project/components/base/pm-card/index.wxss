.pm-card {
  position: relative;
  background: var(--color-bg-primary);
  border-radius: var(--radius-md);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid var(--color-border-secondary);
  box-shadow: var(--shadow-sm);
  overflow: hidden;

  --pm-card-padding: var(--space-5);

  padding: var(--pm-card-padding);
}

.pm-card__status-bar {
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-color: var(--color-info);
  border-radius: 0 0 var(--radius-sm) 0;
}

.pm-card__status-bar--success {
  background-color: var(--color-success);
}
.pm-card__status-bar--warning {
  background-color: var(--color-warning);
}
.pm-card__status-bar--danger {
  background-color: var(--color-danger);
}
.pm-card__status-bar--info {
  background-color: var(--color-info);
}

.pm-card--variant-default {
  border-color: var(--color-border-secondary);
}

.pm-card--variant-outlined {
  border-color: var(--color-border-primary);
  box-shadow: none;
}

.pm-card--variant-elevated {
  border-color: transparent;
  box-shadow: var(--shadow-md);
}

.pm-card--interactive {
  cursor: pointer;
}

.pm-card--interactive:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx var(--interaction-shadow-generic-hover);
}

.pm-card--hover {
  box-shadow: 0 4rpx 16rpx var(--interaction-shadow-general);
  transform: translateY(-2rpx);
}

.pm-card__header {
  font-weight: var(--font-semibold);
  margin-bottom: var(--space-3);
  display: flex;
  align-items: center;
  gap: var(--space-2);
  color: var(--color-text-primary);
}

.pm-card__body {
  color: var(--color-text-secondary);
  font-size: var(--text-sm);
}

.pm-card__footer {
  margin-top: var(--space-4);
  padding-top: var(--space-3);
  border-top: 2rpx solid var(--color-border-secondary);
  display: flex;
  justify-content: flex-end;
  gap: var(--space-2);
}

.pm-card--status-success {
  border-color: var(--color-success);
}

.pm-card--status-warning {
  border-color: var(--color-warning);
}

.pm-card--status-danger {
  border-color: var(--color-danger);
}

.pm-card--status-info {
  border-color: var(--color-info);
}

.pm-card--status-success .pm-card__header,
.pm-card--status-success .pm-card__status {
  color: var(--color-success);
}

.pm-card--status-warning .pm-card__header,
.pm-card--status-warning .pm-card__status {
  color: var(--color-warning);
}

.pm-card--status-danger .pm-card__header,
.pm-card--status-danger .pm-card__status {
  color: var(--color-danger);
}

.pm-card--status-info .pm-card__header,
.pm-card--status-info .pm-card__status {
  color: var(--color-info);
}
