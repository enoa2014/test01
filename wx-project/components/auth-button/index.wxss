/* components/auth-button/index.wxss */

/* 按钮基础样式 */
.auth-button {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid transparent;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.4;
  text-align: center;
  text-decoration: none;
  outline: none;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 按钮尺寸 */
.auth-button--small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-height: 56rpx;
}

.auth-button--medium {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  min-height: 72rpx;
}

.auth-button--large {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  min-height: 88rpx;
}

/* 按钮类型 */
.auth-button--default {
  background-color: #f8f9fa;
  color: #495057;
  border-color: #dee2e6;
}

.auth-button--default:not(.auth-button--disabled):active {
  background-color: #e9ecef;
}

.auth-button--primary {
  background-color: #007aff;
  color: #ffffff;
  border-color: #007aff;
}

.auth-button--primary:not(.auth-button--disabled):active {
  background-color: #0056b3;
}

.auth-button--success {
  background-color: #34c759;
  color: #ffffff;
  border-color: #34c759;
}

.auth-button--success:not(.auth-button--disabled):active {
  background-color: #28a745;
}

.auth-button--warn {
  background-color: #ff9500;
  color: #ffffff;
  border-color: #ff9500;
}

.auth-button--warn:not(.auth-button--disabled):active {
  background-color: #ff8c00;
}

/* 无权限状态 */
.auth-button--no-permission {
  background-color: #f8f9fa !important;
  color: #6c757d !important;
  border-color: #dee2e6 !important;
  cursor: not-allowed;
}

/* 禁用状态 */
.auth-button--disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 加载状态 */
.auth-button--loading {
  cursor: wait;
}

/* 平面样式 */
.auth-button--plain {
  background-color: transparent !important;
}

.auth-button--plain.auth-button--default {
  color: #495057;
  border-color: #dee2e6;
}

.auth-button--plain.auth-button--primary {
  color: #007aff;
  border-color: #007aff;
}

.auth-button--plain.auth-button--success {
  color: #34c759;
  border-color: #34c759;
}

.auth-button--plain.auth-button--warn {
  color: #ff9500;
  border-color: #ff9500;
}

/* 圆角样式 */
.auth-button--round {
  border-radius: 999rpx;
}

/* 按钮内容 */
.auth-button__content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.auth-button__no-permission {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  gap: 8rpx;
}

.auth-button__text {
  font-size: inherit;
  line-height: inherit;
}

/* 权限弹窗 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.auth-modal__mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.auth-modal__content {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: calc(100vw - 80rpx);
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.auth-modal__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1px solid #f0f0f0;
}

.auth-modal__title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.auth-modal__close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  font-size: 40rpx;
  color: #999;
  padding: 0;
  margin: 0;
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.auth-modal__close:hover {
  background-color: #f5f5f5;
  color: #666;
}

.auth-modal__body {
  padding: 32rpx;
  text-align: center;
}

.auth-modal__icon {
  margin-bottom: 24rpx;
}

.auth-modal__message {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.auth-modal__details {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.auth-modal__info {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
  text-align: left;
}

.auth-modal__actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.auth-modal__btn {
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  text-align: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.auth-modal__btn--primary {
  background-color: #007aff;
  color: #ffffff;
}

.auth-modal__btn--primary:active {
  background-color: #0056b3;
}

.auth-modal__btn--default {
  background-color: #f8f9fa;
  color: #495057;
  border: 1px solid #dee2e6;
}

.auth-modal__btn--default:active {
  background-color: #e9ecef;
}

.auth-modal__btn--text {
  background-color: transparent;
  color: #007aff;
  padding: 16rpx 32rpx;
}

.auth-modal__btn--text:active {
  color: #0056b3;
  background-color: rgba(0, 122, 255, 0.1);
}

/* 响应式适配 */
@media (max-width: 480px) {
  .auth-modal__content {
    margin: 20rpx;
    width: calc(100vw - 40rpx);
  }

  .auth-modal__header {
    padding: 24rpx 24rpx 12rpx;
  }

  .auth-modal__title {
    font-size: 32rpx;
  }

  .auth-modal__body {
    padding: 24rpx;
  }

  .auth-modal__message {
    font-size: 28rpx;
  }

  .auth-modal__actions {
    padding: 0 24rpx 24rpx;
  }

  .auth-modal__btn {
    font-size: 28rpx;
    padding: 20rpx 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .auth-modal__content {
    background-color: #1c1c1e;
    color: #ffffff;
  }

  .auth-modal__header {
    border-bottom-color: #38383a;
  }

  .auth-modal__title {
    color: #ffffff;
  }

  .auth-modal__close {
    color: #8e8e93;
  }

  .auth-modal__close:hover {
    background-color: #38383a;
    color: #aeaeb2;
  }

  .auth-modal__message {
    color: #ffffff;
  }

  .auth-modal__details {
    background-color: #38383a;
  }

  .auth-modal__info {
    color: #aeaeb2;
  }

  .auth-modal__btn--default {
    background-color: #38383a;
    color: #ffffff;
    border-color: #545458;
  }

  .auth-modal__btn--default:active {
    background-color: #545458;
  }
}