/* 响应式辅助样式（依赖 generated/tokens.wxss 中的断点变量） */

/* 容器 */
.container {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  padding-left: var(--spacing-horizontal, var(--space-4));
  padding-right: var(--spacing-horizontal, var(--space-4));
  box-sizing: border-box;
}

/* 栅格 */
.grid {
  display: grid;
  gap: var(--space-4);
}

.grid-cols-1 {
  grid-template-columns: repeat(1, minmax(0, 1fr));
}
.grid-cols-2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}
.grid-cols-3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}
.grid-cols-4 {
  grid-template-columns: repeat(4, minmax(0, 1fr));
}

/* Flex 辅助 */
.stack {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.inline-stack {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--space-3);
}

.hidden-xs {
  display: none;
}

